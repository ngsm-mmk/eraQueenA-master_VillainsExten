		ELSE
			CFLAG:121 -= 63
		ENDIF
	;装飾品
	ELSEIF Z == 600 && (CFLAG:121 == 2047 || CFLAG:121 == 0)
		IF CFLAG:121 == 0
			CFLAG:121 |= 1984
			CALL CLOTHES_RE
		ELSE
			CFLAG:121 -= 1984
		ENDIF
	ENDIF
	RESTART
ELSEIF Z == 900
	RETURN 0
ENDIF


