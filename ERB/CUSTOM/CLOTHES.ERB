	;着衣状態の保存処理
	REPEAT 7
		C:COUNT = T:COUNT
	REND
	C:9 = T:9
	;フラグいっぱい使うの申し訳ないので一個に押し込みます
	CFLAG:120 = C:0 + (C:1 * 10) + (C:2 * 100) + (C:3 * 1000) + (C:4 * 10000) + (C:5 * 100000) + (C:6 * 1000000) + (C:9 * 10000000)
