	TEQUIP:0 = 0
	TEQUIP:1 = 0
	TEQUIP:2 = 0
	TEQUIP:3 = 0
	TEQUIP:4 = 0
	TEQUIP:5 = 0
	TEQUIP:6 = 0
	TEQUIP:9 = 0
;下着姿
ELSEIF FLAG:1 == 2
	TEQUIP:4 = 0
	TEQUIP:5 = 0
	TEQUIP:6 = 0
;半裸(上)
ELSEIF FLAG:1 == 5
	TEQUIP:3 = 0
	TEQUIP:5 = 0
	TEQUIP:6 = 0
;半裸(下)
ELSEIF FLAG:1 == 6
	TEQUIP:2 = 0
	TEQUIP:4 = 0
;ノーパン
ELSEIF FLAG:1 == 1
	TEQUIP:2 = 0
	TEQUIP:3 = 0
ENDIF

;兽耳を反映させる。オプションで设定を变更した場合用。
SIF TEQUIP:7 == 1
	TALENT:143 = 11
SIF TEQUIP:7 == 2
	TALENT:143 = 12
SIF TEQUIP:7 == 3
	TALENT:143 = 13

@EVENTTURNEND
