	IF (TEQUIP:1 == 5 || TEQUIP:1 == 6) && TFLAG:55
		TEQUIP:1 = 0
	ENDIF
	;着衣状態の保存処理
	REPEAT 10
		A = COUNT + 123
		CFLAG:A = TEQUIP:COUNT
	REND
	CFLAG:122 = TEQUIP:10
ENDIF
@EVENTEND
;初期衣服が前回设定でない場合、デフォ兽耳以外の兽耳は解除。
SIF FLAG:1 != 4 && TALENT:143 > 10
	TALENT:143 = 0
