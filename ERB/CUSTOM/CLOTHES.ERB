	CALL COM_ABLE105
	IF RESULT
		SELECTCOM = 105
		CALL COM105
		CALL SP_CLOTHES
		RESTART
	ELSE
		PRINTFORMW 现在戴不了眼罩。
		RESTART
	ENDIF
ENDIF
IF TEQUIP:0 == 2 && Z == 60
	SELECTCOM = 189
	CALL COM189
	CALL SP_CLOTHES
		RESTART
ENDIF
IF TEQUIP:8 == 2 && Z == 80
	SELECTCOM = 105
	CALL COM105
	CALL SP_CLOTHES
		RESTART
ENDIF

IF Z >= 150 && Z < 200
	CALL ACCESSORY_CHANGE
	RESTART
;Cosplay処理。
;番号移动して処理を簡略化してみた。
;我慢できずに増やしてしまったんだぜ
ELSEIF Z != 200 && Z != 300 && Z != 400 && Z != 500 && Z != 600 && Z != 900
	;Zの10の位が0のときは全身外衣（ただし、200、300などは使えない）
	B = Z / 10
	B = B % 10
	IF B == 0
		;全身外衣のいちばん上の桁が足りなくなった……ので(Z = X0X)において指定。TEQWIP:6 == XX
		A = 6
		;Zの100の位をYの10の位にし、Zの1の位をYの1の位に足す。服の種類の指定に使用する
		Y = (Z / 10) + (Z % 100)
	ELSEIF Z > 100
		;Aに100の位を格納・着用部位の指定に使用する(6までは数値が反転してるので元に戻す)
		A = Z / 100
		SIF A <= 6
			A = 6 - A
		;Yに10の位以下を格納・服の種類の指定に使用する
		Y = Z % 100
	ELSE
		;Aに10の位を格納・着用部位の指定に使用する(6までは数値が反転してるので元に戻す)
		A = Z / 10
		SIF A <= 6
			A = 6 - A
		;Yに1の位を格納・服の種類の指定に使用する
		Y = Z % 10
	ENDIF
	SIF A > 9
		GOTO INPUT_LOOP
	;T:Xに仮格納。脱がす場合も脱がす予定の衣服
	IF Y == 0
		T:A = TEQUIP:A
	ELSE
		T:A = Y
	ENDIF

	;脱掉衣服場合
	IF Y == 0
		;着ていない場合は再输入
		SIF TEQUIP:A == 0
			GOTO INPUT_LOOP
		;脱がせた後の状態が分かるように脱がせてからテ接吻トを呼ぶように变更
		TEQUIP:A = 0
		CALL CLOTHES_MESSAGE
		;下身内衣脱下時水手裙以外の下身外衣も脱げる
		IF A == 2 && (TEQUIP:4 != 1 || TEQUIP:6 == 7 || TEQUIP:1 == 5 || TEQUIP:1 == 6)
			TEQUIP:4 = 0
			TEQUIP:6 = 0
			;丝袜、网袜のとき、袜子と靴が脱げる
			IF TEQUIP:1 == 5 || TEQUIP:1 == 6
				TEQUIP:1 = 0
				TEQUIP:9 = 0
				IF TFLAG:55 == 0
					SIF TEQUIP:1 == 5
						ITEM:50 += 1
					SIF TEQUIP:1 == 6
						ITEM:51 += 1
				ENDIF
			ENDIF
		ENDIF
		;袜子脱下とき靴も脱げる
		IF A == 1
			TEQUIP:9 = 0
			STAIN:7 = 0
				;丝袜脱下時水手裙以外の下身外衣も脱げる
				;また、もし破れていなければITEMに足す
				IF TEQUIP:4 != 1 || TEQUIP:6 == 7
					IF TEQUIP:1 == 5 || TEQUIP:1 == 6
						TEQUIP:4 = 0
						TEQUIP:6 = 0
						TFLAG:55 = 0
						IF TFLAG:55 == 0
							SIF TEQUIP:1 == 5
								ITEM:50 += 1
							SIF TEQUIP:1 == 6
								ITEM:51 += 1
						ENDIF
					ENDIF
				ENDIF
		ENDIF
		;上身内衣脱下時上身外衣と全身外衣も脱げる
		IF A == 3
			TEQUIP:5 = 0
			TEQUIP:6 = 0
			;领带と领结取下
			TEQUIP:10 -= TEQUIP:10 & 8
			TEQUIP:10 -= TEQUIP:10 & 16
		ENDIF
		;上身外衣脱下時、全身外衣も脱げる
		IF A == 5 || A == 6
			IF TEQUIP:3 != 3 && (A == 5 || (A == 6 && (T:6 == 3 || T:6 == 4)))
				;领带と领结取下
				TEQUIP:10 -= TEQUIP:10 & 8
				TEQUIP:10 -= TEQUIP:10 & 16
			ENDIF
			TEQUIP:6 = 0
		ENDIF
		;脱ぐと着衣の汚れが重置される
		X = 8 + A
		STAIN:X = 0
	;服を着装場合
	ELSE
		;着用条件が満たされてない(番号が表示されてない)場合は返回
		SIF X:Z == 0
			GOTO INPUT_LOOP
		;丝袜・网袜は着るごとに一枚減る。丝袜びりびりフラグ初期化。
		IF A == 1
			IF T:1 == 5 || T:1 == 6
				SIF T:1 == 5
					ITEM:50 -= 1
				SIF T:1 == 6
					ITEM:51 -= 1
				TFLAG:55 = 0
			ENDIF
		ENDIF
		;頭部装飾で兽耳装着判定
		IF A == 7
			SIF Y == 1
				TALENT:143 = 11
			SIF Y == 2
				TALENT:143 = 12
			SIF Y == 3
				TALENT:143 = 13
			SIF Y > 3 && (TEQUIP:7 == 1 || TEQUIP:7 == 2 || TEQUIP:7 == 3)
				TALENT:143 = 0
		ENDIF

		;围裙、眼罩が外れるときに口上呼び出し。A値をFに仮格納。
		F = A
		IF TEQUIP:0 == 2 && T:A != 2 && A == 0
			SELECTCOM = 189
			CALL COM189
			CALL SP_CLOTHES
		ENDIF
		IF TEQUIP:8 == 2 && T:A != 2 && A == 8
			SELECTCOM = 105
			CALL COM105
			CALL SP_CLOTHES
		ENDIF
		A = F
		;脱げる処理を先にした方が汚れ判定に是いかな
		;全身外衣を着る時上衣上下が脱げる（外套以外のとき）
		IF A == 6 && T:6 != 12
			TEQUIP:4 = 0
			TEQUIP:5 = 0
		ENDIF
		;上衣上下を着る時全身外衣が脱げる
		IF A == 5 || A == 4
			TEQUIP:6 = 0
		ENDIF
		;袜子を着るとき靴が脱げる
		IF A == 1
			TEQUIP:9 = 0
			STAIN:7 = 0
			;丝袜、网袜のときは裤子系も脱げる
			IF (TEQUIP:1 == 5 || TEQUIP:1 == 6) && (TEQUIP:4 != 1 || TEQUIP:6 == 7)
				TEQUIP:4 = 0
				TEQUIP:6 = 0
			ENDIF
		ENDIF
		;下着を着るとき丝袜、网袜と靴が脱げる
		IF A == 2
			IF TEQUIP:1 == 5 || TEQUIP:1 == 6
				TEQUIP:1 = 0
				TEQUIP:9 = 0
				STAIN:7 = 0
				IF TFLAG:55 == 0
					SIF TEQUIP:1 == 5
						ITEM:50 += 1
					SIF TEQUIP:1 == 6
						ITEM:51 += 1
				ENDIF
			ENDIF
		ENDIF
		;着装前に服の汚れを判定
		CALL CLOTHES_STAIN
		TEQUIP:A = T:A
		;着装処理の後にテ接吻トを呼ぶ
		CALL CLOTHES_MESSAGE
	ENDIF
	RESTART
;外出着装。
ELSEIF Z == 200
	;汚れ処理のため先に全裸にしてしまう
	;事前に兽耳解除
	SIF TEQUIP:7 == 1 || TEQUIP:7 == 2 || TEQUIP:7 == 3
		TALENT:143 = 0
	REPEAT 11
		A = COUNT
		;着替え不必要な下着（袜子と上下）以外の着衣汚れを重置。眼镜も就这样。
		IF (TEQUIP:A != T:A && A != 1 && A != 2 && A != 3) || A != 8
			TEQUIP:A = 0
			X = 8 + A
			STAIN:X = 0
		ENDIF
	REND
	CALL CLOTHES_SET
	;汚れ
	REPEAT 11
		A = COUNT
		CALL CLOTHES_STAIN
		TEQUIP:A = T:A
		COUNT = A
	REND
	RESTART
ELSEIF Z == 300
	DRAWLINE
	CALL COS_SET
	IF RESULT == 1
		RESTART
	ELSEIF Y:Z == 1
		;汚れ処理のため先に全裸にしてしまう
		;事前に兽耳解除
		SIF TEQUIP:7 == 1 || TEQUIP:7 == 2 || TEQUIP:7 == 3
			TALENT:143 = 0
		REPEAT 11
			A = COUNT
			;着替え不必要な下着（袜子と上下）以外の着衣汚れを重置。眼镜も就这样。
			IF (TEQUIP:A != T:A && A != 1 && A != 2 && A != 3)
				SIF A != 8
					TEQUIP:A = 0
				X = 8 + A
				STAIN:X = 0
			ENDIF
		REND
		;汚れと衣服の着用
		REPEAT 11
			A = COUNT
			CALL CLOTHES_STAIN
			TEQUIP:A = T:A
			COUNT = A
		REND
		;Cosplay口上呼び出し用にY=0となるのを防いでいるだけです
		Y = 100
		CALL COS_SET_NAME
		PRINTL 穿好了
	ENDIF
	;Cosplay口上呼び出し
	TFLAG:13 = 25
	CALL KOJO_MESSAGE_EVENT
	RESTART
;表示制限関係
ELSEIF (Z == 400 || Z == 500 || Z == 600) && DAY >= 200 && CHARANUM > 12
	;详细设定画面に飛ぶ
	IF Z == 400
		CALL CLOTHES_CONTROL
	;反転させる
	ELSEIF Z == 500 && CFLAG:121 != 2047 && CFLAG:121 != 0
		CALL CLOTHES_RE
	;衣類
	ELSEIF Z == 500 && (CFLAG:121 == 2047 || CFLAG:121 == 0)
