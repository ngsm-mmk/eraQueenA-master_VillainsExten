	ELSEIF TALENT:(ARG:1):113 && !TALENT:(ARG:1):男性 && !TALENT:(ARG:1):双性
		LOCAL = -1
	;キャラ２　普通男
	ELSEIF TALENT:(ARG:1):男性 || TALENT:(ARG:1):双性
		LOCAL = -1
	;キャラ２　普通女
	ELSE
		LOCAL = 0
	ENDIF
