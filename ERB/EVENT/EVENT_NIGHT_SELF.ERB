	SIF TALENT:COUNT:30 && TALENT:COUNT:3 == 0 && TALENT:COUNT:4 == 0 && TALENT:COUNT:5 == 0 && TALENT:COUNT:6 == 0 && TALENT:COUNT:7 == 0 && TALENT:COUNT:8 == 0
