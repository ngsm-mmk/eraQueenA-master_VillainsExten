	ELSEIF (TALENT:施虐狂 || ABL:嗜虐属性 >= 4) && RAND:4 == 0
		CALL NIGHT_SELF_SPLAY
	;百合プ雷
	ELSEIF !PENIS(TARGET) && !PENIS(MASTER) && RAND:2 == 0
		CALL NIGHT_SELF_LES
	ENDIF
ENDIF
IF ASSI > 0
	ASSI = TARGET
	TARGET = D
	CALL NIGHT_CHECK
	;覗き見
