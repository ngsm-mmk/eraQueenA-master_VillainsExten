	R += 2
;盲信
SIF TALENT:ARG:86
	R += 2


;主人の魅力
SIF TALENT:MASTER:92
	R += 2
;主人の魅惑
SIF TALENT:MASTER:93
	R += 3
;主人の谜之魅力
SIF TALENT:MASTER:94
	R += 5
;主人の治疗
SIF TALENT:MASTER:135
	R += 2
;主人の鼓舞
SIF TALENT:MASTER:136
	R += 2
;主人の人气
SIF TALENT:MASTER:145
	R += 3

;依赖度補正を加算
R += TFLAG:30
    
;失意で半分になる
SIF TALENT:ARG:162
	R /= 2

;結果が0未満の場合は0にする
SIF R < 0
	R = 0

IF !(TALENT:ARG:5 || TALENT:ARG:8)
	CFLAG:ARG:2 += R
ELSE
	CFLAG:ARG:2 -= R
ENDIF
PRINTW
PRINTL
IF R > 0 && !(TALENT:ARG:5 || TALENT:ARG:8)
	SETCOLOR 252, 131, 167
	PRINTL <依赖度増加>
ELSEIF R <= 0
	SETCOLOR 192, 192, 192
	PRINTL <依赖度无变化>
ELSE
	SETCOLOR 74, 74, 255
	PRINTL <依赖度减少>
ENDIF
RESETCOLOR

R = 0

PRINTL
PRINTL
RETURN 0



@BASE_SHOW_ROOM(ARG)

;-------------------------------------------------
;痛苦からくる体力・气力の減少
;-------------------------------------------------
D = UP:10/20
;ABL:受虐属性をみる
IF ABL:ARG:9 == 0
	TIMES D , 1.00
ELSEIF ABL:ARG:9 == 1
	TIMES D , 0.95
ELSEIF ABL:ARG:9 == 2
	TIMES D , 0.90
ELSEIF ABL:ARG:9 == 3
	TIMES D , 0.80
ELSEIF ABL:ARG:9 == 4
	TIMES D , 0.65
ELSE
	TIMES D , 0.50
ENDIF
;怕痛
SIF TALENT:ARG:40
	TIMES D , 1.20
;耐痛
SIF TALENT:ARG:41
	TIMES D , 0.80

LOSEBASE:0 += D
LOSEBASE:1 += D

;-------------------------------------------------
;体力・气力の減少
;-------------------------------------------------
BASE:ARG:0 -= LOSEBASE:0
IF BASE:ARG:0 < 0
	BASE:ARG:0 = 0
ELSEIF BASE:ARG:0 > MAXBASE:ARG:0
	BASE:ARG:0 = MAXBASE:ARG:0
ENDIF
BASE:ARG:1 -= LOSEBASE:1
IF BASE:ARG:1 < 0
	BASE:ARG:1 = 0
ELSEIF BASE:ARG:1 > MAXBASE:ARG:1
	BASE:ARG:1 = MAXBASE:ARG:1
ENDIF


;气力０
SIF BASE:ARG:1 <= 0
	PRINTL ★气力０★

;体力・气力の減少
PRINT 体力-
PRINTV LOSEBASE:0
PRINT  气力-
PRINTVL LOSEBASE:1
PRINTW