@ADD_ON_SETTING
PRINT [  1]　称号功能　　　　　　　
IF FLAG:2 & 2
	PRINTL ○
ELSE
	PRINTL ×
ENDIF
PRINT [  2]　着衣PLAY扩展　　　　
IF FLAG:2 & 8
	PRINTL ○
ELSE
	PRINTL ×
ENDIF
PRINTL [100] - 返回

$INPUT_LOOP
INPUT
IF RESULT == 100
	RETURN 0
ELSEIF RESULT == 1
	IF FLAG:2 & 2
		PRINTW 关闭称号功能
		FLAG:2 -= 2
	ELSE
		PRINTW 开启称号功能
		FLAG:2 |= 2
	ENDIF
ELSEIF RESULT == 2
	IF FLAG:2 & 8
		PRINTW 关闭着衣PLAY
		FLAG:2 -= 8
	ELSE
		PRINTW 开启着衣PLAY
		FLAG:2 |= 8
	ENDIF
ELSE
	GOTO INPUT_LOOP
ENDIF

