@LIST_CHARA(ARGS:0, ARG:0, ARGS:1)
#DIM L_INPUT
#DIM L_I
#DIM L_PAGE
#DIM L_CNT_DATA
#DIM L_CNT_PRINT
#DIM L_PREV
#DIM L_NEXT
#DIM T_A
#DIMS L_ERR_MSG
;-----------------------------
;- 初期処理
