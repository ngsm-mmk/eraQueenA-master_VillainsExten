ENDIF
DRAWLINE

L_I = 0
WHILE 1

	;SET:開始値
	SIF L_I < (L_PAGE * L_CNT_PRINT)
		L_I = (L_PAGE * L_CNT_PRINT)

	;ページ範囲外
	SIF L_I >= ( (L_PAGE + 1) * L_CNT_PRINT)
		BREAK

	;- 最大キャラ数超過
	IF L_I >= L_CNT_DATA
		;空行
		PRINTL

	ELSE
	    CALL INFO_TARGET1_DETAIL(L_I)
		PRINTFORM [%TOSTR(L_I),3%]
		CALL INFO_TARGET_DETAIL(L_I)
		PRINTL
	ENDIF

	L_I += 1

