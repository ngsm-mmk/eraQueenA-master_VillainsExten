;-------------------------------------------------
;舔阴
;爱抚系指令　レベル1
;-------------------------------------------------
@COM1
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
;前回と今回の调教者が同じ
IF (ASSIPLAY && TFLAG:50) || (ASSIPLAY == 0 && TFLAG:50 == 0)
	;绳子使用中でなく、前回の调教が口交命令か強制舔阴か６９式だと６９式に
	IF (PREVCOM == 81 || PREVCOM == 120 || PREVCOM == 501) && TEQUIP:19 == 0
		CALL COM_ABLE501
		SIF RESULT == 1
			JUMP COM501
	;绳子使用中でなく、前回の调教が乳交か縦乳交か乳夹口交か６９乳交だと６９乳交に
	ELSEIF (PREVCOM == 82 || PREVCOM == 87 || PREVCOM == 88 || PREVCOM == 508) && TEQUIP:19 == 0
		CALL COM_ABLE508
		SIF RESULT == 1
			JUMP COM508
	ENDIF
ENDIF

;羞耻PLAY中は岩清水に
IF TEQUIP:30 == 1
	JUMP COM502
ENDIF


PRINTL 舔阴
STR:0 = 舔阴


;丝袜びりびりフラグ
IF TEQUIP:1 == 5 || TEQUIP:1 == 6
	TFLAG:55 = 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 5
LOSEBASE:1 += 50

SOURCE:0 = 100
SOURCE:10 = 300
SOURCE:13 = 10
SOURCE:17 = 15
SOURCE:18 = 15

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 20

;舌を使う调教では、调教者の善用舌头によって、快感のソース増加
SIF TALENT:PLAYER:52
	TIMES SOURCE:0 , 1.50

;猫舌では減少
SIF TALENT:PLAYER:54
	TIMES SOURCE:0 , 0.75

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隶のＶ⇔调教者の口の汚れが移动
STAIN:3 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:3

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;PRINTFORML %CALLNAME:MASTER%的%EXPNAME:25%＋１
EXP:MASTER:舔阴经验 += 1


;蔷薇经验とか加算
CALL COM_EXP(3)


;调教者が猫舌持ちの場合は、调教者に嗜虐快乐经验を追加
IF TALENT:PLAYER:54
	EXP:PLAYER:32 += 1
	PRINTFORML %CALLNAME:PLAYER%的%EXPNAME:32%＋１
ENDIF

;依赖度ベクトル
TFLAG:33 = 1

RETURN 1

