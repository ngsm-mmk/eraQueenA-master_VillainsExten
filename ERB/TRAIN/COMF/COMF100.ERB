;-------------------------------------------------
;打屁股
;SM系指令、レベル1
;-------------------------------------------------
@COM100
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
;前のプ雷が后背位か背面立位で调教者の技巧３以上の場合、打屁股做爱へ派生
IF (PREVCOM == 61 || PREVCOM == 76) && ABL:PLAYER:2 >= 3
	CALL COM_ABLE515
	SIF RESULT == 1
		JUMP COM515
;前のプ雷が后背位肛交か背面立位肛で调教者の技巧３以上の場合、打屁股肛へ派生
ELSEIF (PREVCOM == 63 || PREVCOM == 77) && ABL:PLAYER:2 >= 3
	CALL COM_ABLE516
	SIF RESULT == 1
		JUMP COM516
ENDIF

PRINTL 打屁股
STR:0 = 打屁股


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 60
LOSEBASE:1 += 20

SOURCE:7 = 450
SOURCE:8 = 400
SOURCE:17 = 50
SOURCE:18 = 300


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;痛苦のパラメータによる痛苦のソース増加は先に処理しておく
IF PALAM:10 < PALAMLV:1
	TIMES SOURCE:7 , 1.00
ELSEIF PALAM:10 < PALAMLV:2
	TIMES SOURCE:7 , 1.50
ELSEIF PALAM:10 < PALAMLV:3
	TIMES SOURCE:7 , 2.00
ELSEIF PALAM:10 < PALAMLV:4
	TIMES SOURCE:7 , 2.50
ELSEIF PALAM:10 >= PALAMLV:4
	TIMES SOURCE:7 , 3.00
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(2)



;依赖度ベクトル
TFLAG:33 = 3

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

