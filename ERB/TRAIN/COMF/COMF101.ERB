;-------------------------------------------------
;打胸部
;SM系指令、レベル1
;-------------------------------------------------
@COM101
PRINTL 打胸部
STR:0 = 打胸部


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 50
LOSEBASE:1 += 30

SOURCE:7 = 450
SOURCE:8 = 400
SOURCE:17 = 50
SOURCE:18 = 300


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;受虐属性に応じて快Bのソースを追加する
SOURCE:3 += 100*ABL:9


;痛苦のパラメータによる痛苦のソース増加は先に処理しておく
IF PALAM:10 < PALAMLV:1
	TIMES SOURCE:7 , 1.00
ELSEIF PALAM:10 < PALAMLV:2
	TIMES SOURCE:7 , 1.50
ELSEIF PALAM:10 < PALAMLV:3
	TIMES SOURCE:7 , 2.00
ELSEIF PALAM:10 < PALAMLV:4
	TIMES SOURCE:7 , 2.50
ELSEIF PALAM:10 >= PALAMLV:4
	TIMES SOURCE:7 , 3.00
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隶のＢ⇔调教者の指の汚れが移动
STAIN:5 |= STAIN:PLAYER:1
STAIN:PLAYER:1 |= STAIN:5

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(2)


;依赖度ベクトル
TFLAG:33 = 3

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

RETURN 1

