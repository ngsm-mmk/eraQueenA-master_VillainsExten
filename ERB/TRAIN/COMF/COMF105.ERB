;-------------------------------------------------
;眼罩
;SM系指令、レベル1
;-------------------------------------------------
@COM105
PRINTL 眼罩
STR:0 = 眼罩




;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 0
LOSEBASE:1 += 80

SOURCE:8 = 700
SOURCE:13 = 100
SOURCE:17 = 300
SOURCE:18 = 600

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;紧缚经验が高いと消費減少
IF EXP:51 < EXPLV:3
	TIMES LOSEBASE:1 , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES LOSEBASE:1 , 0.90
ELSE
	TIMES LOSEBASE:1 , 0.70
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
EXP:51 += 2
PRINTL 紧缚经验＋２

;蔷薇经验とか加算
CALL COM_EXP(1)


;依赖度ベクトル
TFLAG:33 = 3

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


CALL KOJO_MESSAGE_COM
;着脱の処理
IF TEQUIP:18 == 0 || TEQUIP:8 != 2
	TEQUIP:18 = 1
	TEQUIP:8 = 2
ELSE
	TEQUIP:18 = 0
	TEQUIP:8 = 0
ENDIF
RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM105
PRINTL ＜眼罩穿戴中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:0 += 0
LOSEBASE:1 += 40

SOURCE:8 += 350
SOURCE:13 += 50
SOURCE:17 += 150
SOURCE:18 += 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;紧缚经验が高いと消費減少
A = 40
IF EXP:51 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
LOSEBASE:1 += A

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
EXP:51 += 1
PRINTL 紧缚经验＋１

RETURN 1

