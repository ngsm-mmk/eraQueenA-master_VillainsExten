;-------------------------------------------------
;绳子
;SM系指令、レベル3
;-------------------------------------------------
@COM106
IF TEQUIP:25
	PRINTL 触手紧缚
	STR:0 = 触手紧缚
	SELECTCOM = 166
ELSE
	PRINTL 捆绑
	STR:0 = 捆绑
ENDIF



;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 30
LOSEBASE:1 += 120

SOURCE:7 = 300
SOURCE:8 = 900
SOURCE:13 = 200
SOURCE:14 = 250
SOURCE:17 = 300
SOURCE:18 = 700

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;紧缚经验が高いと消費減少
IF EXP:51 < EXPLV:3
	TIMES LOSEBASE:0 , 1.00
	TIMES LOSEBASE:1 , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES LOSEBASE:0 , 0.90
	TIMES LOSEBASE:1 , 0.90
ELSE
	TIMES LOSEBASE:0 , 0.70
	TIMES LOSEBASE:1 , 0.70
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
EXP:51 += 5
PRINTL 紧缚经验＋５

;蔷薇经验とか加算
CALL COM_EXP(1)


;触手召喚時、触手经验の重置をする
SIF TEQUIP:25 == 1
	觸手 = 0

;依赖度ベクトル
TFLAG:33 = 3

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

CALL KOJO_MESSAGE_COM
;着脱の処理
IF TEQUIP:19 == 0
	TEQUIP:19 = 1
	;触手紧缚は触手の汚れを追加
	IF TEQUIP:25
		STAIN:1 |= 32
		STAIN:5 |= 32
	ENDIF
ELSE
	TEQUIP:19 = 0
ENDIF

RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM106
IF TEQUIP:25
	PRINTL ＜触手紧缚中＞
ELSE
	PRINTL ＜捆绑中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 15

SOURCE:7 += 150
SOURCE:8 += 450
SOURCE:13 += 100
SOURCE:14 += 125
SOURCE:17 += 150
SOURCE:18 += 350

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;紧缚经验が高いと消費減少
A = 60
IF EXP:51 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
LOSEBASE:1 += A


;-------------------------------------------------
;经验の処理
;-------------------------------------------------
EXP:51 += 1
PRINTL 紧缚经验＋１

;触手经验加算
SIF TEQUIP:25 == 1
	觸手 += 1


RETURN 1

