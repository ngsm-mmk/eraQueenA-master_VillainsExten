;-------------------------------------------------
;口塞球
;SM系指令、レベル2
;-------------------------------------------------
@COM107
PRINTL 口塞球
STR:0 = 口塞球



;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 0
LOSEBASE:1 += 50

SOURCE:8 = 500
SOURCE:13 = 200
SOURCE:14 = 150
SOURCE:17 = 100
SOURCE:18 = 300

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;紧缚经验が高いと消費減少
IF EXP:51 < EXPLV:3
	TIMES LOSEBASE:0 , 1.00
	TIMES LOSEBASE:1 , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES LOSEBASE:0 , 0.90
	TIMES LOSEBASE:1 , 0.90
ELSE
	TIMES LOSEBASE:0 , 0.70
	TIMES LOSEBASE:1 , 0.70
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
EXP:51 += 2
PRINTL 紧缚经验＋２

;依赖度ベクトル
TFLAG:33 = 3

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:20 == 0
	TEQUIP:20 = 1
ELSE
	TEQUIP:20 = 0
ENDIF
RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM107
PRINTL ＜口塞球装备中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 0

SOURCE:8 += 250
SOURCE:13 += 150
SOURCE:14 += 75
SOURCE:17 += 50
SOURCE:18 += 150

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;紧缚经验が高いと消費減少
A = 25
IF EXP:51 < EXPLV:3
	TIMES A , 1.00
ELSEIF EXP:51 < EXPLV:4
	TIMES A , 0.90
ELSE
	TIMES A , 0.70
ENDIF
LOSEBASE:1 += A

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
EXP:51 += 1
PRINTL 紧缚经验＋１

RETURN 1

