;--------------------------------------------------
;射精止め
;--------------------------------------------------
@COM109
PRINTL 禁止射精
STR:0 = 禁止射精

;蝴蝶结の着脱
IF TEQUIP:37
	;せき止めた精液が射精槽に加算される
	BASE:2 += EX:2 * MAXBASE:2
	CALL KOJO_MESSAGE_COM
	TEQUIP:37 = 0
ELSE
	PRINTL 紧缚经验＋1
	EXP:51 += 1
	CALL KOJO_MESSAGE_COM
	TEQUIP:37 = 1
ENDIF

;依赖度ベクトル
TFLAG:33 = 3

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

;-------------------------------------------------
;ソースの計算
;-------------------------------------------------
LOSEBASE:0 += 10
LOSEBASE:1 += 100

SOURCE:0 = 50
SOURCE:7 = 100
SOURCE:13 = 100
SOURCE:14 = 250
SOURCE:17 = 500

;PALAM:Ｃ感觉をみる
IF PALAM:0 < PALAMLV:1
	SOURCE:7 += 100
ELSEIF PALAM:0 < PALAMLV:2
	SOURCE:7 += 110
ELSEIF PALAM:0 < PALAMLV:3
	SOURCE:7 += 120
ELSEIF PALAM:0 < PALAMLV:4
	SOURCE:7 += 130
ELSE
	SOURCE:7 += 140
ENDIF

;PALAM:情欲をみる
IF PALAM:6 < PALAMLV:1
	SOURCE:11 = 100
ELSEIF PALAM:6 < PALAMLV:2
	SOURCE:11 = 110
ELSEIF PALAM:6 < PALAMLV:3
	SOURCE:11 = 120
ELSEIF PALAM:6 < PALAMLV:4
	SOURCE:11 = 130
ELSE
	SOURCE:11 = 140
ENDIF

;ABL:受虐属性をみる
IF ABL:21 == 0
	TIMES SOURCE:11 , 0.80
ELSEIF ABL:9 == 1
	TIMES SOURCE:11 , 1.00
ELSEIF ABL:9 == 2
	TIMES SOURCE:11 , 1.30
ELSEIF ABL:9 == 3
	TIMES SOURCE:11 , 1.60
ELSEIF ABL:9 == 4
	TIMES SOURCE:11 , 2.00
ELSE
	TIMES SOURCE:11 , 3.00
ENDIF

;性倒错
SIF TALENT:80
	TIMES SOURCE:11 , 2.00
;调教者が施虐狂、嗜虐属性3以上
SIF TALENT:PLAYER:83 || ABL:PLAYER:10 > 2
	TIMES SOURCE:18 , 1.20
	

RETURN 1

