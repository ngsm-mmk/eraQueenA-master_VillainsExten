;丝袜びりびりフラグ
IF TEQUIP:1 == 5 || TEQUIP:1 == 6
	TFLAG:55 = 1
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 30
LOSEBASE:1 += 90

SOURCE:0 = 200
SOURCE:5 = 200
SOURCE:6 = 100
SOURCE:13 = 50
SOURCE:14 = 400
SOURCE:17 = 400
SOURCE:18 = 400


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 400
;-------------------------------------------------
;射精・女主人绝顶チェック
;-------------------------------------------------
CALL SAMEN_CHECK

;射精時の処理
IF E >= 1
	;射精先タイプの设定
	TFLAG:703 = 7
	;射精先選択の可・不可
	TFLAG:704 = 1
	;汎用的な処理はこの関数で行う
	;（射精槽の再計算や射精经验の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隶のＶ⇔调教者のＶの汚れが移动
STAIN:3 |= STAIN:PLAYER:3
STAIN:PLAYER:3 |= STAIN:3

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(8)


;依赖度ベクトル
P = NO:PLAYER
IF RELATION:P > 100
	TFLAG:33 = 2
ELSEIF RELATION:P < 100
	TFLAG:33 = 3
ELSE
	TFLAG:33 = 1
ENDIF

;依赖度補正値(相性100↑かつ淫乱で1、娼妇で2）
P = NO:PLAYER
IF TALENT:4 && RELATION:P > 100
	TFLAG:30 += 1
ELSEIF TALENT:7 && RELATION:P > 100
	TFLAG:30 += 2
ENDIF

TFLAG:100 = 1


RETURN 1

