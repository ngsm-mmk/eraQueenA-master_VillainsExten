;-------------------------------------------------
;放尿
;严厉な调教指令、レベル2
;-------------------------------------------------
@COM144
PRINTL 放尿
STR:0 = 放尿


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 10
LOSEBASE:1 += 200

SOURCE:8 = 200
SOURCE:13 = 800
SOURCE:14 = 500
SOURCE:17 = 700
SOURCE:18 = 700


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 700

;場所によって逸脱のソースが上下
;野外
IF TEQUIP:29
	TIMES SOURCE:17 , 2.50
;鏡の前（羞耻PLAY）
ELSEIF TEQUIP:30
	TIMES SOURCE:17 , 1.50
;浴室場
ELSEIF TEQUIP:31
	TIMES SOURCE:17 , 0.50
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;调教对象のＰに尿汚れ
STAIN:2 |= 128
;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;放尿经验
PRINTFORML %EXPNAME:31%＋２
EXP:31 += 2

;蔷薇经验とか加算
CALL COM_EXP(1)



;野外放尿で异常经验
IF TEQUIP:29 && CFLAG:5 == 0
	PRINTFORML %EXPNAME:50%＋１
	EXP:50 += 1
	CFLAG:5 = 1
ELSEIF TEQUIP:29
	CFLAG:5 += 1
ENDIF

;利尿剂解除
IF TEQUIP:27
	TEQUIP:27 = 0
ENDIF

;依赖度ベクトル
TFLAG:33 = 5

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

