@COM148
PRINTL 扩张气球
STR:0 = 扩张气球


;丝袜びりびりフラグ
IF TEQUIP:1 == 5 || TEQUIP:1 == 6
	TFLAG:55 = 1
ENDIF

;后庭处子だった場合の喪失フラグ
;IF TALENT:161
;	TFLAG:161 = 1
;ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 150
LOSEBASE:1 += 200

SOURCE:2 = 200
SOURCE:7 = 800
SOURCE:13 = 300
SOURCE:14 = 400
SOURCE:17 = 700
SOURCE:18 = 700


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 700

;Aへの痛苦は先に処理しておく
;EXP:Ａ经验をみる
IF EXP:1 < EXPLV:1
	TIMES SOURCE:7 , 3.00
	TIMES SOURCE:18 , 3.00
ELSEIF EXP:1 < EXPLV:2
	TIMES SOURCE:7 , 1.20
	TIMES SOURCE:18 , 2.00
ELSEIF EXP:1 < EXPLV:3
	TIMES SOURCE:7 , 0.80
	TIMES SOURCE:18 , 1.50
ELSEIF EXP:1 < EXPLV:4
	TIMES SOURCE:7 , 0.60
	TIMES SOURCE:18 , 1.20
ELSEIF EXP:1 < EXPLV:5
	TIMES SOURCE:7 , 0.40
ELSEIF EXP:1 >= EXPLV:5
	TIMES SOURCE:7 , 0.20
ENDIF

;PALAM:润滑をみる
IF PALAM:4 < PALAMLV:1
	TIMES SOURCE:7 , 1.20
	TIMES SOURCE:18 , 2.00
ELSEIF PALAM:4 < PALAMLV:2
	TIMES SOURCE:7 , 1.00
	TIMES SOURCE:18 , 1.50
ELSEIF PALAM:4 < PALAMLV:3
	TIMES SOURCE:7 , 0.60
ELSEIF PALAM:4 < PALAMLV:4
	TIMES SOURCE:7 , 0.30
ELSEIF PALAM:4 >= PALAMLV:4
	TIMES SOURCE:7 , 0.20
ENDIF


;-------------------------------------------------
;经验の処理
;-------------------------------------------------
EXP:1 += 5
PRINTL Ａ经验＋５

IF EXP:52 == 0 && EXP:53 == 0 
	EXP:50 += 1
	PRINTL 异常经验＋１
ENDIF

EXP:53 += 1
PRINTL Ａ扩张经验＋1

;蔷薇经验とか加算
CALL COM_EXP(1)

;依赖度ベクトル
TFLAG:33 = 5

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

CALL KOJO_MESSAGE_COM
;着脱の処理
IF TEQUIP:22 == 0
	TEQUIP:22 = 1
ELSE
	TEQUIP:22 = 0
ENDIF

RETURN 1


