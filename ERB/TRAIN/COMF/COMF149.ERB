;-------------------------------------------------
;肛门电极
;严厉な调教指令、レベル4
;-------------------------------------------------
@COM149
PRINTL 肛门电极
STR:0 = 肛门电极


;丝袜びりびりフラグ
IF TEQUIP:1 == 5 || TEQUIP:1 == 6
	TFLAG:55 = 1
ENDIF



;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 300
LOSEBASE:1 += 450

SOURCE:2 = 500
SOURCE:7 = 1500
SOURCE:13 = 300
SOURCE:14 = 800
SOURCE:17 = 1200
SOURCE:18 = 1200

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 1200

;フィストなどのAへの大きな痛苦は先に処理しておく
;EXP:Ａ经验をみる
IF EXP:1 < EXPLV:1
	TIMES SOURCE:7 , 3.00
	TIMES SOURCE:18 , 4.00
ELSEIF EXP:1 < EXPLV:2
	TIMES SOURCE:7 , 2.50
	TIMES SOURCE:18 , 3.50
ELSEIF EXP:1 < EXPLV:3
	TIMES SOURCE:7 , 2.40
	TIMES SOURCE:18 , 3.00
ELSEIF EXP:1 < EXPLV:4
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:18 , 2.50
ELSEIF EXP:1 < EXPLV:5
	TIMES SOURCE:7 , 1.80
	TIMES SOURCE:18 , 2.00
ELSEIF EXP:1 >= EXPLV:5
	TIMES SOURCE:7 , 1.60
	TIMES SOURCE:18 , 1.50
ENDIF

;PALAM:润滑をみる
IF PALAM:4 < PALAMLV:1
	TIMES SOURCE:7 , 3.00
	TIMES SOURCE:18 , 2.00
ELSEIF PALAM:4 < PALAMLV:2
	TIMES SOURCE:7 , 2.50
	TIMES SOURCE:18 , 1.50
ELSEIF PALAM:4 < PALAMLV:3
	TIMES SOURCE:7 , 2.00
	TIMES SOURCE:18 , 1.20
ELSEIF PALAM:4 < PALAMLV:4
	TIMES SOURCE:7 , 1.50
ELSEIF PALAM:4 >= PALAMLV:4
	TIMES SOURCE:7 , 1.00
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;Ａ经验
EXP:1 += 5
PRINTL Ａ经验＋５

;异常经验が5未満のとき、异常经验追加
IF EXP:50 < 5
	EXP:50 += 1
	PRINTL 异常经验＋１
ENDIF

;蔷薇经验とか加算
CALL COM_EXP(1)


;依赖度ベクトル
TFLAG:33 = 5

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

CALL KOJO_MESSAGE_COM
;着脱の処理
IF TEQUIP:23 == 0
	TEQUIP:23 = 1
ELSE
	TEQUIP:23 = 0
ENDIF

RETURN 1


