;-------------------------------------------------
;乳房电极
;严厉な调教指令、レベル4
;-------------------------------------------------
@COM150
PRINTL 乳房电极
STR:0 = 乳房电极




;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 300
LOSEBASE:1 += 450

SOURCE:3 = 500
SOURCE:7 = 1500
SOURCE:13 = 300
SOURCE:14 = 800
SOURCE:17 = 1200
SOURCE:18 = 1200


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 1200


;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;异常经验が5未満のとき、异常经验追加
IF EXP:50 < 5
	EXP:50 += 1
	PRINTL 异常经验＋１
ENDIF

;蔷薇经验とか加算
CALL COM_EXP(1)


;依赖度ベクトル
TFLAG:33 = 5

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

CALL KOJO_MESSAGE_COM
;着脱の処理
IF TEQUIP:24 == 0
	TEQUIP:24 = 1
ELSE
	TEQUIP:24 = 0
ENDIF
RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM150
;乳房电极

PRINTL ＜乳房电极装备中＞

LOSEBASE:0 += 150
LOSEBASE:1 += 250

SOURCE:3 += 250
SOURCE:7 += 750
SOURCE:14 += 400
SOURCE:17 += 600
SOURCE:18 += 600


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 600


RETURN 1

