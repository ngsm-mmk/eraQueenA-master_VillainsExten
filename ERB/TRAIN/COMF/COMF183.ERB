;-------------------------------------------------
;摄像机
;特殊指令
;-------------------------------------------------
@COM183
;カウントは10回とする
K = 10

;摄影者の処理
$INPUT_LOOP
IF TEQUIP:28 == 0 && ASSI >= 0
	PRINTL 请选择负责拍摄的人　拍摄者中途无法变更
	PRINTL （变更拍摄者的话，将结束当前摄影）
	PRINTL 
	PRINTFORML [0] %CALLNAME:MASTER%
	PRINTFORML [1] %CALLNAME:ASSI%
	PRINTFORML 
	INPUT
	IF RESULT == 0
		FLAG:22 = 1
		PRINTFORML 拍摄者是%CALLNAME:MASTER%
	ELSEIF RESULT == 1 && ASSI > -1
		FLAG:22 = 2
		PRINTFORML 拍摄者是%CALLNAME:ASSI%
	ELSE
		GOTO INPUT_LOOP
	ENDIF
ELSEIF TEQUIP:28 == 0
	FLAG:22 = 1
	PRINTFORML 拍摄者是%CALLNAME:MASTER%
ENDIF


STR:0 = 摄像机



;着脱の処理
IF TEQUIP:28
;视频拍摄がされていれば終了させる
;テープは終了時に数を減らす、さらにこれまでの値段と经验を加算する
	ITEM:43 -= 1
	CALL PRICE_VIDEO
	PRINTW ★★★视频拍摄结束了★★★
ELSE
;视频拍摄してなければ初期化して開始
;TODO 起動条件を作成する
	TFLAG:70 = 0
	REPEAT K
		S = COUNT + 11
		FLAG:S = 0
	REND
	PRINTW ★★★视频拍摄开始了★★★
ENDIF

;依赖度ベクトル
TFLAG:33 = 0

CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:28
	TEQUIP:28 = 0
ELSE
	TEQUIP:28 = 1
ENDIF

RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM183
;摄影開始時はカウントに入れない
IF TFLAG:70 == 0
	TFLAG:70 += 1
	RETURN 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 0
LOSEBASE:1 += 50

SOURCE:8 += 1000
SOURCE:17 += 400
SOURCE:18 += 700


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 700

;痛苦を伴わない受虐属性及び受虐狂の処理は先にしておく
;受虐属性を見る
A = 1000
IF ABL:9 == 0
	TIMES A , 0.80
	SOURCE:10 += 0
	SOURCE:11 += 0
ELSEIF ABL:9 == 1
	TIMES A , 1.00
	SOURCE:10 += 20
	SOURCE:11 += 30
ELSEIF ABL:9 == 2
	TIMES A , 1.20
	SOURCE:10 += 40
	SOURCE:11 += 70
ELSEIF ABL:9 == 3
	TIMES A , 1.40
	SOURCE:10 += 70
	SOURCE:11 += 120
ELSEIF ABL:9 == 4
	TIMES A , 1.50
	SOURCE:10 += 110
	SOURCE:11 += 180
ELSEIF ABL:9 == 5
	TIMES A , 1.70
	SOURCE:10 += 150
	SOURCE:11 += 250
ELSEIF ABL:9 == 6
	TIMES A , 1.90
	SOURCE:10 += 200
	SOURCE:11 += 300
ELSEIF ABL:9 == 7
	TIMES A , 2.10
	SOURCE:10 += 250
	SOURCE:11 += 350
ELSEIF ABL:9 == 8
	TIMES A , 2.30
	SOURCE:10 += 300
	SOURCE:11 += 400
ELSEIF ABL:9 == 9
	TIMES A , 2.50
	SOURCE:10 += 350
	SOURCE:11 += 450
ELSEIF ABL:9 >= 10
	TIMES A , 3.00
	SOURCE:10 += 500
	SOURCE:11 += 500
ENDIF
SOURCE:13 += A


;-------------------------------------------------
;经验の処理
;-------------------------------------------------
IF FLAG:22 == 1
	EXP:MASTER:62 += 1
	PRINTL 主人摄影经验＋１
ELSEIF FLAG:22 == 2
	EXP:ASSI:62 += 1
	PRINTL 助手摄影经验＋１
ENDIF
EXP:TARGET:63 += 1
PRINTL 奴隶被拍经验＋１

;依赖度ベクトルを強制的に变更
SIF TFLAG:33 == 1 || TFLAG:33 == 2
	TFLAG:33 = 3

;依赖度補正値(服从で1、隶属で2　強制变更なので重置）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 = 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 = 2
ENDIF


;-------------------------------------------------
;ビデオの処理
;-------------------------------------------------
;カウントは10回とします
K = 10
;指令の派生フラグが立っていればそちらを、いなければSELECTCOMを入れる
IF TFLAG:90
	L = TFLAG:90
ELSE
	L = SELECTCOM
ENDIF
;テープ残量がなくなると強制的にEQUIPフラグ取下、さらにビデオの値段と经验の処理をする
IF TFLAG:70 <= 0 || TFLAG:70 >= K
	TEQUIP:28 = 0
	ITEM:43 -= 1
	;摄影内容の保存
	S = TFLAG:70+10
	FLAG:S = L
	TFLAG:70 += 1
	CALL PRICE_VIDEO
	PRINTL ＜剩余录像带不足　视频拍摄终止＞
	RETURN 1
ELSE
	PRINTFORML ＜视频拍摄中{TFLAG:70}/{K}＞
ENDIF

;摄影内容の保存
S = TFLAG:70+10
FLAG:S = L
TFLAG:70 += 1


RETURN 1


