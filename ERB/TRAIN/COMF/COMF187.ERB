;-------------------------------------------------
;浴室PLAY
;特殊な指令
;-------------------------------------------------
@COM187
PRINTL 浴室PLAY
STR:0 = 浴室PLAY


;着脱の処理　終了時はソース、经验の加算は行わない
IF TEQUIP:31 == 1
	CALL KOJO_MESSAGE_COM
	TEQUIP:31 = 0
	;淋浴も取下
	TEQUIP:32 = 0
	RETURN 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 0
LOSEBASE:1 += 30

SOURCE:8 = 100
SOURCE:13 = 200
SOURCE:17 = 50
SOURCE:18 = 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 50


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;装备時に汚れを重置する（浴室に来て汚れたままもどうかということで）
STAIN:0 = 0
STAIN:1 = 0
STAIN:2 = 2
STAIN:3 = 1
STAIN:4 = 8
STAIN:5 = 0


;依赖度ベクトル
TFLAG:33 = 2
CALL KOJO_MESSAGE_COM
TEQUIP:31 = 1
RETURN 1


