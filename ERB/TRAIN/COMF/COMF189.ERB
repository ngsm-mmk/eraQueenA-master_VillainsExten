@COM189
PRINTL 新妻PLAY
STR:0 = 新妻PLAY



;依赖度ベクトル
TFLAG:33 = 0

CALL KOJO_MESSAGE_COM


;着脱の処理　装备時はソース、经验の加算は行わない
IF TEQUIP:33 == 1
	TEQUIP:33 = 0
	TEQUIP:0 = 0
ELSE
	TEQUIP:33 = 1
	TEQUIP:0 = 2

ENDIF

RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM189
;新妻PLAY

;助手调教時は、围裙を解除して関数終了
IF ASSIPLAY
	TEQUIP:33 = 0
	RETURN 0
ENDIF

PRINTL ＜新妻PLAY中＞

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 20
LOSEBASE:1 += 20

SOURCE:4 += 1000
SOURCE:12 += 5000
SOURCE:17 += 500


;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;爱情经验
IF TEQUIP:6 == 10
    PRINTFORML %EXPNAME:23%＋2
    EXP:23 += 2
ELSE
    PRINTFORML %EXPNAME:23%＋１
    EXP:23 += 1
ENDIF

;依赖度補正値(主人かつ恋慕で2、相亲相爱で4）
IF TALENT:3 && ASSIPLAY == 0
	TFLAG:30 += 2
ELSEIF TALENT:6 && ASSIPLAY == 0
	TFLAG:30 += 4
ENDIF


RETURN 1

