;-------------------------------------------------
;含精接吻
;特殊指令
;-------------------------------------------------
@COM194
PRINTL 含精接吻
STR:0 = 含精接吻



;汚れの計算
Y = 0
;愛液の汚れ
SIF STAIN:PLAYER:2 & 1
	Y += 1
;精液の汚れ
SIF STAIN:PLAYER:2 & 4
	Y += 3
;肛の汚れ
SIF STAIN:PLAYER:2 & 8
	Y += 7
SIF STAIN:PLAYER:2 & 16
	Y += 15

SIF TALENT:61
	Y /= 3
SIF TALENT:62
	Y *= 2

;口で射精　と同じ扱い
TFLAG:0 = 1
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 0
LOSEBASE:1 += 80

SOURCE:5 = 420
SOURCE:6 = 150
SOURCE:14 = 1200
SOURCE:17 = 500
SOURCE:18 = 500

;上のほうで計算した汚れデータ
SOURCE:15 = Y*40 + 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 300

;助手と奴隶の相性によって、全体のソースが変化
T = NO:TARGET
A = NO:PLAYER
SOURCE:4 *= RELATION:A
SOURCE:10 *= RELATION:A
SOURCE:14 *= RELATION:A
SOURCE:16 *= RELATION:A
SOURCE:17 *= RELATION:A
SOURCE:18 *= RELATION:A
SOURCE:4 /= 100
SOURCE:10 /= 100
SOURCE:14 /= 100
SOURCE:16 /= 100
SOURCE:17 /= 100
SOURCE:18 /= 100

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;调教者の口の汚れと奴隶の口の汚れを処理
S = STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:0
STAIN:0 |= S

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(5)

PRINTL 精液经验+1
EXP:精液经验 += 1

RETURN 1

