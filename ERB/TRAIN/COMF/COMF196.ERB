;-------------------------------------------------
;剥いてやる
;特殊指令
;-------------------------------------------------
@COM196
PRINTL 剥包皮
STR:0 = 剥包皮


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 50
LOSEBASE:1 += 150
;恐惧、露出、屈从、反抗
SOURCE:恐惧 += 400
SOURCE:露出 += 800
SOURCE:屈从 += 300
SOURCE:反抗 += 300


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:性压抑 || TALENT:抵抗
	SOURCE:郁闷 += 500

;痛苦を伴わない受虐属性及び受虐狂の処理は先にしておく
;受虐属性を見る
A = 700
IF ABL:受虐属性 == 0
	TIMES A , 0.80
	SOURCE:液体 += 0
	SOURCE:情欲 += 0
ELSEIF ABL:受虐属性 == 1
	TIMES A , 1.00
	SOURCE:液体 += 20
	SOURCE:情欲 += 30
ELSEIF ABL:受虐属性 == 2
	TIMES A , 1.20
	SOURCE:液体 += 40
	SOURCE:情欲 += 70
ELSEIF ABL:受虐属性 == 3
	TIMES A , 1.40
	SOURCE:液体 += 70
	SOURCE:情欲 += 120
ELSEIF ABL:受虐属性 == 4
	TIMES A , 1.50
	SOURCE:液体 += 110
	SOURCE:情欲 += 180
ELSEIF ABL:受虐属性 == 5
	TIMES A , 1.70
	SOURCE:液体 += 150
	SOURCE:情欲 += 250
ELSEIF ABL:受虐属性 == 6
	TIMES A , 1.90
	SOURCE:液体 += 200
	SOURCE:情欲 += 300
ELSEIF ABL:受虐属性 == 7
	TIMES A , 2.10
	SOURCE:液体 += 250
	SOURCE:情欲 += 350
ELSEIF ABL:受虐属性 == 8
	TIMES A , 2.30
	SOURCE:液体 += 300
	SOURCE:情欲 += 400
ELSEIF ABL:受虐属性 == 9
	TIMES A , 2.50
	SOURCE:液体 += 350
	SOURCE:情欲 += 450
ELSEIF ABL:受虐属性 >= 10
	TIMES A , 3.00
	SOURCE:液体 += 500
	SOURCE:情欲 += 500
ENDIF
SOURCE:露出 += A

;调教者の技巧により快Ｃ、疼痛、恐惧
A = 700
IF ABL:PLAYER:2 == 0
	TIMES A , 1.50
ELSEIF ABL:PLAYER:2 == 1
	TIMES A , 1.20
ELSEIF ABL:PLAYER:2 == 2
	TIMES A , 1.00
ELSEIF ABL:PLAYER:2 == 3
	TIMES A , 0.50
	SOURCE:快Ｃ += 120
ELSEIF ABL:PLAYER:2 == 4
	TIMES A , 0.30
	SOURCE:快Ｃ += 180
ELSEIF ABL:PLAYER:2 == 5
	A = 0
	SOURCE:快Ｃ += 250
ELSEIF ABL:PLAYER:2 == 6
	A = 0
	SOURCE:快Ｃ += 300
ELSEIF ABL:PLAYER:2 == 7
	A = 0
	SOURCE:快Ｃ += 350
ELSEIF ABL:PLAYER:2 == 8
	A = 0
	SOURCE:快Ｃ += 400
ELSEIF ABL:PLAYER:2 == 9
	A = 0
	SOURCE:快Ｃ += 450
ELSEIF ABL:PLAYER:2 >= 10
	A = 0
	SOURCE:快Ｃ += 500
ENDIF
SOURCE:疼痛 += A
SOURCE:恐惧 += A
SOURCE:反抗 += (A/2)

;包茎が無くなる
TALENT:包茎 = 0
;包茎を剥かれた回数がプラス1
CFLAG:34 += 1

;依赖度ベクトル
IF A > 700
	TFLAG:33 = 3
ELSE
	TFLAG:33 = 1
ENDIF

RETURN 1


