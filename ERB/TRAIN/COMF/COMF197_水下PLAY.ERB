;-------------------------------------------------
;水下PLAY
;主要为水生的指令
;-------------------------------------------------
@COM197
PRINTL 水下PLAY
STR:0 = 水下PLAY


;着脱の処理　終了時はソース、经验の加算は行わない
IF TEQUIP:53 == 1
	CALL KOJO_MESSAGE_COM
	TEQUIP:53 = 0
	RETURN 1
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 0
LOSEBASE:1 += 30

SOURCE:8 = 100
SOURCE:13 = 200
SOURCE:17 = 50
SOURCE:18 = 100

IF TALENT:水生
    SOURCE:12 += 200
ELSEIF TALENT:植物 || TALENT:史莱姆
    SOURCE:12 += 150
ELSEIF !TALENT:潜游
    SOURCE:12 += 80
ELSE
    SOURCE:12 += 100
ENDIF

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 50

;吸血鬼（流水の中では動けないため、いろいろ追加）
IF TALENT:132
	SOURCE:8 += 200
	SOURCE:14 += 200
	SOURCE:15 += 500
	SOURCE:17 += 500
	SOURCE:18 += 500
ENDIF

;兽耳の場合（まぁ基本洗われるのは嫌と解釈）
IF TALENT:143
	SOURCE:8 += 100
	SOURCE:14 += 100
	SOURCE:17 += 500
	SOURCE:18 += 500
ENDIF

;变温体质喜欢温暖
IF TALENT:227
    SOURCE:12 += 80
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;装备時に汚れを重置する（浴室に来て汚れたままもどうかということで）
STAIN:0 = 0
STAIN:1 = 0
STAIN:2 = 2
STAIN:3 = 1
STAIN:4 = 8
STAIN:5 = 0


;依赖度ベクトル
TFLAG:33 = 2
CALL KOJO_MESSAGE_COM
TEQUIP:53 = 1
RETURN 1


