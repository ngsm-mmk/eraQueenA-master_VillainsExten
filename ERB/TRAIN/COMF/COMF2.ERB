;前回と今回の调教者が同じ
IF (ASSIPLAY && TFLAG:50) || (ASSIPLAY == 0 && TFLAG:50 == 0)
	;绳子使用中でなく、前回の调教が口交命令か強制舔阴か６９式だと６９式に
	IF (PREVCOM == 81 || PREVCOM == 120 || PREVCOM == 501) && TEQUIP:19 == 0
		CALL COM_ABLE501
		SIF RESULT == 1
			JUMP COM501
	ENDIF
ENDIF

