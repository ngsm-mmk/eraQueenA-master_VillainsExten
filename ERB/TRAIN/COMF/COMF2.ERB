LOSEBASE:1 += 50

SOURCE:0 = 110

;奴隶男の場合
IF TALENT:140
	SOURCE:4 = 50
	SOURCE:17 = 5
ELSE
	SOURCE:17 = 20
ENDIF
SOURCE:8 = 20
SOURCE:10 = 40
SOURCE:13 = 20
SOURCE:18 = 20


