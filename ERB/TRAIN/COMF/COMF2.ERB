;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 20

;调教者のTALENT:善用舌头をみる
SIF TALENT:PLAYER:52
	TIMES SOURCE:0 , 1.50

;调教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:54
	TIMES SOURCE:0 , 0.75


