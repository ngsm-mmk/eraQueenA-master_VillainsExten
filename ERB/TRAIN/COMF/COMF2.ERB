;PRINTFORML %CALLNAME:MASTER%的%EXPNAME:22%＋１
EXP:MASTER:口交经验 += 1


;蔷薇经验とか加算
CALL COM_EXP(3)

;调教者が猫舌持ちの場合は、调教者に嗜虐快乐经验を追加
IF TALENT:PLAYER:54
	EXP:PLAYER:32 += 1
	PRINTFORML %CALLNAME:PLAYER%的%EXPNAME:32%＋１
ENDIF

