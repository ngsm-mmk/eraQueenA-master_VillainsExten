;舔足
;主人受指令、レベル
;-------------------------------------------------
@COM210
PRINTL 舔足
STR:0 = 舔足


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 5
LOSEBASE:1 += 80

SOURCE:11 =20
SOURCE:13 = 150
SOURCE:15 = 300
SOURCE:17 = 100
SOURCE:18 = 100

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 200
;靴を履いていると不洁・逸脱ソース追加
IF TEQUIP:9 > 0
	SOURCE:15 += 100
	SOURCE:17 += 100
ENDIF
;嗜虐属性を見る
IF ABL:	10 == 0
	TIMES SOURCE:15 , 1.00
ELSEIF ABL:10 == 1
	TIMES SOURCE:15 , 0.95
	SOURCE:11 += 30
ELSEIF ABL:10 == 2
	TIMES SOURCE:15 , 0.80
	SOURCE:11 += 50
ELSEIF ABL:10 == 3
	TIMES SOURCE:15 , 0.75
	SOURCE:11 += 80
ELSEIF ABL:10 == 4
	TIMES SOURCE:15 , 0.60
	SOURCE:11 += 100
ELSEIF ABL:10 == 5
	TIMES SOURCE:15 , 0.50
	SOURCE:11 += 150
ELSEIF ABL:10 == 6
	TIMES SOURCE:15 , 0.45
	SOURCE:11 += 200
ELSEIF ABL:10 == 7
	TIMES SOURCE:15 , 0.40
	SOURCE:11 += 250
ELSEIF ABL:10 == 8
	TIMES SOURCE:15 , 0.35
	SOURCE:11 += 300
ELSEIF ABL:10 == 9
	TIMES SOURCE:15 , 0.30
	SOURCE:11 += 350
ELSEIF ABL:10 >= 10
	TIMES SOURCE:15 , 0.20
	SOURCE:11 += 400
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;调教者の口⇔奴隶の足の汚れが移动
STAIN:PLAYER:0 |= STAIN:7
STAIN:7 |= STAIN:PLAYER:0

;奴隶の足に汚れがあるとき綺麗に
SIF STAIN:7
STAIN:7 = 0
;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(4)


;依赖度ベクトル
TFLAG:33 = 1

;依赖度補正値(主人かつ恋慕、相亲相爱で2。服从、隶属で３）
IF (TALENT:3 || TALENT:6) && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF (TALENT:5 ||TALENT:8) && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

A = 0
;施虐狂持ちは嗜虐快乐经验も入れる
IF TALENT:83
	A += 2
	;靴履いてるならさらに入れる
	SIF TEQUIP:9
		A += 3
	;それが细高跟ならさらに入れる
	SIF TEQUIP:9 == 9
		A += 1
	PRINTFORML %EXPNAME:32%+{A}
	EXP:32 += A
ENDIF

RETURN 1

