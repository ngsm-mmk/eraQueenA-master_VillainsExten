;-------------------------------------------------
;肛门爱抚命令
;助手命令指令、レベル
;-------------------------------------------------
@COM224
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
PRINTL 肛门爱抚命令
STR:0 = 肛门爱抚•助手命令


;丝袜びりびりフラグ
IF TEQUIP:1 == 5 || TEQUIP:1 == 6
	TFLAG:55 = 1
ENDIF
;着脱の処理
IF TEQUIP:46 == 0
	TEQUIP:46 = 1
ELSE
	TEQUIP:46 = 0
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 60
LOSEBASE:1 += 150

SOURCE:2 = 100
SOURCE:13 = 50
SOURCE:14 = 50
SOURCE:17 = 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 70
;助手の技巧により快Ａソース追加、下手すぎると疼痛のソース追加
IF ABL:ASSI:2 == 0
	SOURCE:7 += 100
ELSEIF ABL:ASSI:2 == 1
	SOURCE:7 += 50
ELSEIF ABL:ASSI:2 == 2
	SOURCE:2 += 50
ELSEIF ABL:ASSI:2 == 3
	SOURCE:2 += 100
ELSEIF ABL:ASSI:2 == 4
	SOURCE:2 += 150
ELSE
	SOURCE:2 += 200
ENDIF
;助手が小人体型で、调教对象が小人体型でなく性倒错でもないと逸脱のソース追加
SIF TALENT:142 == 0 && TALENT:ASSI:142 && TALENT:80
	SOURCE:17 += 50	
;Aへの痛苦は先に処理しておく
;EXP:Ａ经验をみる
IF EXP:1 < EXPLV:1
	TIMES SOURCE:7 , 3.00
	TIMES SOURCE:18 , 3.00
ELSEIF EXP:1 < EXPLV:2
	TIMES SOURCE:7 , 1.20
	TIMES SOURCE:18 , 2.00
ELSEIF EXP:1 < EXPLV:3
	TIMES SOURCE:7 , 0.80
	TIMES SOURCE:18 , 1.50
ELSEIF EXP:1 < EXPLV:4
	TIMES SOURCE:7 , 0.60
	TIMES SOURCE:18 , 1.20
ELSEIF EXP:1 < EXPLV:5
	TIMES SOURCE:7 , 0.40
ELSEIF EXP:1 >= EXPLV:5
	TIMES SOURCE:7 , 0.20
ENDIF

;PALAM:润滑をみる
IF PALAM:4 < PALAMLV:1
	TIMES SOURCE:7 , 1.20
	TIMES SOURCE:18 , 2.00
ELSEIF PALAM:4 < PALAMLV:2
	TIMES SOURCE:7 , 1.00
	TIMES SOURCE:18 , 1.50
ELSEIF PALAM:4 < PALAMLV:3
	TIMES SOURCE:7 , 0.60
ELSEIF PALAM:4 < PALAMLV:4
	TIMES SOURCE:7 , 0.30
ELSEIF PALAM:4 >= PALAMLV:4
	TIMES SOURCE:7 , 0.20
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隶のＡ⇔助手の手の汚れが移动
STAIN:4 |= STAIN:ASSI:1
STAIN:ASSI:1 |= STAIN:4
;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;A经验
EXP:1 += 2
PRINTL Ａ经验＋２
;百合经验
A = 3
B = NO:ASSI + 1199
IF (TALENT:137 == 0 && TALENT:140 == 0) && (TALENT:ASSI:137 == 0 && TALENT:ASSI:140 == 0)
	PRINTFORML %EXPNAME:40%+{A}
	EXP:40 += A
ELSEIF (TALENT:137 || TALENT:140) && (TALENT:ASSI:137 || TALENT:ASSI:140)
	PRINTFORML %EXPNAME:41%+{A}
	EXP:41 += A
ENDIF
;调教者を記録
CFLAG:B += A

;依赖度ベクトル
TFLAG:33 = 3


RETURN 1


