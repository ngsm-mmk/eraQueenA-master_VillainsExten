;-------------------------------------------------
;暴力を振るう
;日常系指令、レベル
;-------------------------------------------------
@COM30
PRINTL 施暴
STR:0 = 施暴


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 100
LOSEBASE:1 += 60

SOURCE:7 = 1800
SOURCE:8 = 2000
SOURCE:14 = 1000
SOURCE:17 = 300
SOURCE:18 = 800


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;痛苦を伴わない受虐属性及び受虐狂の処理は先にしておく
;受虐属性を見る
IF ABL:9 == 0
	TIMES SOURCE:14 , 0.80
	SOURCE:10 += 0
	SOURCE:11 += 0
ELSEIF ABL:9 == 1
	TIMES SOURCE:14 , 1.00
	SOURCE:10 += 20
	SOURCE:11 += 30
ELSEIF ABL:9 == 2
	TIMES SOURCE:14 , 1.20
	SOURCE:10 += 40
	SOURCE:11 += 70
ELSEIF ABL:9 == 3
	TIMES SOURCE:14 , 1.40
	SOURCE:10 += 70
	SOURCE:11 += 120
ELSEIF ABL:9 == 4
	TIMES SOURCE:14 , 1.50
	SOURCE:10 += 110
	SOURCE:11 += 180
ELSEIF ABL:9 == 5
	TIMES SOURCE:14 , 1.70
	SOURCE:10 += 150
	SOURCE:11 += 250
ELSEIF ABL:9 == 6
	TIMES SOURCE:14 , 1.90
	SOURCE:10 += 200
	SOURCE:11 += 300
ELSEIF ABL:9 == 7
	TIMES SOURCE:14 , 2.10
	SOURCE:10 += 250
	SOURCE:11 += 350
ELSEIF ABL:9 == 8
	TIMES SOURCE:14 , 2.30
	SOURCE:10 += 300
	SOURCE:11 += 400
ELSEIF ABL:9 == 9
	TIMES SOURCE:14 , 2.50
	SOURCE:10 += 350
	SOURCE:11 += 450
ELSEIF ABL:9 >= 10
	TIMES SOURCE:14 , 3.00
	SOURCE:10 += 500
	SOURCE:11 += 500
ENDIF

;受虐狂を見る
IF TALENT:84 == 1
	TIMES SOURCE:14 , 2.50
	TIMES SOURCE:10 , 1.20
	TIMES SOURCE:11 , 1.20
ENDIF

;TALENT:反抗をみる
IF TALENT:11 == 1
	TIMES SOURCE:9 , 0.75
	TIMES SOURCE:14 , 0.75
	TIMES SOURCE:15 , 1.50
ENDIF

;TALENT:刚强をみる
IF TALENT:12 == 1
	TIMES SOURCE:8 , 0.75
	TIMES SOURCE:18 , 2.50
ENDIF

;TALENT:高傲をみる
IF TALENT:15 == 1
	TIMES SOURCE:8 , 0.75
	TIMES SOURCE:14 , 1.50
	TIMES SOURCE:18 , 2.00
ENDIF

;TALENT:自大をみる
IF TALENT:16 == 1
	TIMES SOURCE:9 , 0.80
	TIMES SOURCE:14 , 0.80
	TIMES SOURCE:18 , 1.80
ENDIF

;TALENT:自卑をみる
IF TALENT:17 == 1
	TIMES SOURCE:8 , 1.50
	TIMES SOURCE:14 , 0.75
	TIMES SOURCE:18 , 0.75
ENDIF

;绳子で紧缚中のとき効果上昇
SIF TEQUIP:19
	TIMES SOURCE:8 , 1.50

;体格差により恐怖のソース追加
S = BUILD2(PLAYER, TARGET)
IF S == 3
	TIMES SOURCE:8 , 2.00
ELSEIF S == 2
	TIMES SOURCE:8 , 1.50
ELSEIF S == 1
	TIMES SOURCE:8 , 1.20
ELSEIF S == 0
	TIMES SOURCE:8 , 1.00
ELSEIF S == -3
	TIMES SOURCE:8 , 0.75
ELSE
	TIMES SOURCE:8 , 0.90
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(1)



;爱情经验(減少）
IF (TALENT:3 == 1 || TALENT:6 == 1) && ASSIPLAY == 0 && EXP:23 > 0
	PRINTS EXPNAME:23
	PRINTL -1
	EXP:23 -= 1
ENDIF

;依赖度ベクトル
TFLAG:33 = 5

;依赖度補正値(服从で1、隶属で2）
IF TALENT:5 && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF TALENT:8 && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF


RETURN 1

