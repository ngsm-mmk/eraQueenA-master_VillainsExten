;舔肛
;爱抚系指令、レベル1
;-------------------------------------------------
@COM4
PRINTL 舔肛门
STR:0 = 舔肛门


;丝袜びりびりフラグ
IF TEQUIP:1 == 5 || TEQUIP:1 == 6
	TFLAG:55 = 1
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
;消費体力、气力
LOSEBASE:0 += 5
LOSEBASE:1 += 50


SOURCE:2 = 50
SOURCE:10 = 200
SOURCE:17 = 40
SOURCE:18 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 50

;调教者のTALENT:善用舌头をみる
SIF TALENT:PLAYER:52
	TIMES SOURCE:2 , 1.50
	
;调教者のTALENT:猫舌をみる
SIF TALENT:PLAYER:52
	TIMES SOURCE:2 , 0.75


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隶のＡ⇔调教者の口の汚れが移动
STAIN:4 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:4

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(3)

;调教者が猫舌持ちの場合は、调教者に嗜虐快乐经验を追加
IF TALENT:PLAYER:54
	EXP:PLAYER:32 += 1
	PRINTFORML %CALLNAME:PLAYER%的%EXPNAME:32%＋１
ENDIF

;依赖度ベクトル
TFLAG:33 = 3


RETURN 1

