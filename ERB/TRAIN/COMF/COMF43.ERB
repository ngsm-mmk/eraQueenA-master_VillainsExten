;-------------------------------------------------
;飞机杯
;道具使用指令、レベル2
;-------------------------------------------------
@COM43
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------



IF TEQUIP:25
	PRINTL 触手玩弄阴茎
	STR:0 = 触手玩弄阴茎
	SELECTCOM = 169
ELSE
	PRINTL 飞机杯
	STR:0 = 飞机杯
ENDIF


;丝袜びりびりフラグ
IF TEQUIP:1 == 5 || TEQUIP:1 == 6
	TFLAG:55 = 1
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 10
LOSEBASE:1 += 80

SOURCE:0 = 200
SOURCE:13 = 20
SOURCE:17 = 30
SOURCE:18 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 30

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手玩弄阴茎なら、触手体液が阴茎に付く
SIF TEQUIP:25
	STAIN:2 |= 32

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(1)


;触手召喚時、触手经验の重置をする
SIF TEQUIP:25 == 1
	觸手 = 0

;依赖度ベクトル
TFLAG:33 = 1
CALL KOJO_MESSAGE_COM
;着脱の処理
IF TEQUIP:12 == 0
	TEQUIP:12 = 1
ELSE
	TEQUIP:12 = 0
ENDIF


RETURN 1

;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM43
;飞机杯装备中
IF TEQUIP:25
	PRINTL ＜触手玩弄阴茎中＞
ELSE
	PRINTL ＜飞机杯装备中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:0 += 5
LOSEBASE:1 += 20

SOURCE:0 += 100
SOURCE:13 += 10
SOURCE:17 += 15
SOURCE:18 += 15


;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;触手经验加算
SIF TEQUIP:25 == 1
	觸手 += 1


RETURN 1

