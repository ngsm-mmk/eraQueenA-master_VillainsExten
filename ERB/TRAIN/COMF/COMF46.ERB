;ELSEIF TALENT:男性 && TALENT:后庭处子
;	EXP:50 += 1
;	PRINTFORML %EXPNAME:50%＋１
;ENDIF

;蔷薇经验とか加算
CALL COM_EXP(1)



;依赖度ベクトル
