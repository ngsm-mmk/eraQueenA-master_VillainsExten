;-------------------------------------------------
;乳头夹
;道具使用指令、レベル2
;-------------------------------------------------
@COM47
IF TEQUIP:25
	PRINTL 触手玩弄乳头
	STR:0 = 触手玩弄乳头
	SELECTCOM = 164
ELSE
	PRINTL 振动乳头夹
	STR:0 = 振动乳头夹
ENDIF


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 10
LOSEBASE:1 += 80

SOURCE:3 = 200
SOURCE:13 = 20
SOURCE:17 = 30
SOURCE:18 = 30


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 30

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;触手揉乳なら、触手体液が胸に付く
SIF TEQUIP:25
	STAIN:5 |= 32

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(1)



;触手召喚時、触手经验の重置をする
SIF TEQUIP:25 == 1
	觸手 = 0

;依赖度ベクトル
TFLAG:33 = 1

CALL KOJO_MESSAGE_COM

;着脱の処理
IF TEQUIP:16 == 0
	TEQUIP:16 = 1
	;触手揉乳は触手の汚れを追加
	IF TEQUIP:25
		STAIN:5 |= 32
	ENDIF
ELSE
	TEQUIP:16 = 0
ENDIF

RETURN 1


;-------------------------------------------------
;装着継続の処理
;-------------------------------------------------
@EQUIP_COM47
;振动乳头夹装备中
IF TEQUIP:25
	PRINTL ＜触手玩弄乳头中＞
ELSE
	PRINTL ＜振动乳头夹装备中＞
ENDIF

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
LOSEBASE:0 += 5
LOSEBASE:1 += 20

SOURCE:3 += 100
SOURCE:13 += 10
SOURCE:17 += 15
SOURCE:18 += 15

RETURN 1

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;触手经验加算
SIF TEQUIP:25 == 1
	觸手 += 1


