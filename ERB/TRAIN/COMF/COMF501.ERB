;-------------------------------------------------
;６９式
;爱抚・侍奉系派生指令
;-------------------------------------------------
@COM501
PRINTL ６９式
;-------------------------------------------------
;実行決定
;-------------------------------------------------
STR:0 = ６９式
TFLAG:56 = SELECTCOM
SELECTCOM = 501


;実行者が奴隶であるフラグ
TFLAG:28 = 1

;-------------------------------------------------
;射精槽チェック
;-------------------------------------------------
B = 1500

;ABL:调教者の技巧をみる
IF ABL:2 == 0
	TIMES B , 1.00
ELSEIF ABL:2 == 1
	TIMES B , 1.20
ELSEIF ABL:2 == 2
	TIMES B , 1.40
ELSEIF ABL:2 == 3
	TIMES B , 1.60
ELSEIF ABL:2 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.00
ENDIF

;ABL:顺从をみる
IF ABL:0 == 0
	TIMES B , 0.80
ELSEIF ABL:0 == 1
	TIMES B , 0.90
ELSEIF ABL:0 == 2
	TIMES B , 1.00
ELSEIF ABL:0 == 3
	TIMES B , 1.10
ELSEIF ABL:0 == 4
	TIMES B , 1.20
ELSE
	TIMES B , 1.30
ENDIF

;ABL:侍奉精神をみる
IF ABL:7 == 0
	TIMES B , 0.50
ELSEIF ABL:7 == 1
	TIMES B , 0.80
ELSEIF ABL:7 == 2
	TIMES B , 1.20
ELSEIF ABL:7 == 3
	TIMES B , 1.50
ELSEIF ABL:7 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.40
ENDIF

;プ雷ヤーのABL:Ｃ感觉をみる
IF ABL:PLAYER:3 == 0
	TIMES B , 1.00
ELSEIF ABL:PLAYER:3 == 1
	TIMES B , 1.50
ELSEIF ABL:PLAYER:3 == 2
	TIMES B , 2.00
ELSEIF ABL:PLAYER:3 == 3
	TIMES B , 2.50
ELSEIF ABL:PLAYER:3 == 4
	TIMES B , 3.50
ELSE
	TIMES B , 5.00
ENDIF



IF TALENT:PLAYER:137 || TALENT:PLAYER:139 || TALENT:PLAYER:140
	;再装填処理中は射精槽は20分の1に
	SIF CFLAG:PLAYER:9 > 0
		B /= 20
	BASE:PLAYER:2 += B
ELSE
	B = B*2
	BASE:PLAYER:2 += B
ENDIF
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 20
LOSEBASE:1 += 160

SOURCE:0 = 100
SOURCE:4 = 100
SOURCE:5 = 450
SOURCE:6 = 200
SOURCE:10 = 80
SOURCE:13 = 100
SOURCE:14 = 800
SOURCE:17 = 600
SOURCE:18 = 600

;上のほうで計算した汚れデータ
SOURCE:15 = Y*80 + 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 800

;舌を使う调教では、调教者の善用舌头によって、快感のソース増加
SIF TALENT:PLAYER:52
	TIMES SOURCE:0 , 1.50

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK

;射精時の処理
IF E >= 1
	;射精先タイプの设定

	IF TALENT:PLAYER:140 || TALENT:PLAYER:139 || TALENT:PLAYER:137
		TFLAG:703 = 4
	ELSE
		TFLAG:703 = 7
	ENDIF
	
	;射精先選択の可・不可
	TFLAG:704 = 1
	;汎用的な処理はこの関数で行う
	;（射精槽の再計算や射精经验の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隶の口⇔调教者のＶの汚れが移动（双性、扶她、男性は阴茎）
IF TALENT:MASTER:137 || TALENT:MASTER:139 || TALENT:MASTER:140
	STAIN:0 |= STAIN:PLAYER:2
	STAIN:PLAYER:2 |= STAIN:0
ELSE
	STAIN:0 |= STAIN:PLAYER:3
	STAIN:PLAYER:3 |= STAIN:0
ENDIF
;奴隶のＶ⇔调教者の口の汚れが移动（双性、扶她、男性は阴茎）
IF TALENT:137 || TALENT:139 || TALENT:140
	STAIN:2 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:2
ELSE
	STAIN:3 |= STAIN:PLAYER:0
	STAIN:PLAYER:0 |= STAIN:3
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;口交、舔阴经验
IF TALENT:MASTER:137 || TALENT:MASTER:139 || TALENT:MASTER:140
	PRINTFORML %EXPNAME:22%＋１
	EXP:22 += 1
ELSE
	PRINTFORML %EXPNAME:25%＋１
	EXP:25 += 1
ENDIF
IF TALENT:137 || TALENT:139 || TALENT:140
	EXP:MASTER:22 += 1
ELSE
	EXP:MASTER:25 += 1
ENDIF

;蔷薇经验とか加算
CALL COM_EXP(1)


;爱情经验
IF (TALENT:3 == 1 || TALENT:6 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:23 += 1
ENDIF

;奴隶が猫舌持ちの場合は、调教者に嗜虐快乐经验を追加
IF TALENT:TARGET:54
	EXP:32 += 1
	PRINTFORML %EXPNAME:32%＋１
ENDIF

;调教者が猫舌持ちの場合は、调教者に嗜虐快乐经验を追加
IF TALENT:PLAYER:54
	EXP:PLAYER:32 += 1
	PRINTFORML %CALLNAME:PLAYER%的%EXPNAME:32%＋１
ENDIF


;依赖度ベクトル
TFLAG:33 = 1

;依赖度補正値(主人かつ恋慕、淫乱、服从で1。相亲相爱、娼妇、隶属で2）
IF (TALENT:3 || TALENT:4 || TALENT:5) && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF (TALENT:6 || TALENT:7 || TALENT:8) && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

;侍奉快乐フラグ
TFLAG:100 = 1


RETURN 1

