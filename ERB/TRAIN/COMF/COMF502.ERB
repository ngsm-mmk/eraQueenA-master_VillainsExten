;-------------------------------------------------
;岩清水
;爱抚系派生指令
;-------------------------------------------------
@COM502
PRINTL 岩清水
STR:0 = 岩清水
SELECTCOM = 502



;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 20
LOSEBASE:1 += 150

SOURCE:0 = 150
SOURCE:8 = 100
SOURCE:10 = 100
SOURCE:13 = 150
SOURCE:17 = 300
SOURCE:18 = 300


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 300

;舌を使う调教では、调教者の善用舌头によって、快感のソース増加
SIF TALENT:PLAYER:52
	TIMES SOURCE:0 , 1.50

;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隶のＶ⇔调教者の口の汚れが移动
STAIN:3 |= STAIN:PLAYER:0
STAIN:PLAYER:0 |= STAIN:3

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
EXP:MASTER:25 += 1

;蔷薇经验とか加算
CALL COM_EXP(3)


;调教者が猫舌持ちの場合は、调教者に嗜虐快乐经验を追加
IF TALENT:PLAYER:54
	EXP:PLAYER:32 += 1
	PRINTFORML %CALLNAME:PLAYER%的%EXPNAME:32%＋１
ENDIF

;依赖度ベクトル
TFLAG:33 = 1


RETURN 1

