;-------------------------------------------------
;搾乳
;爱抚系派生指令
;-------------------------------------------------
@COM509
PRINTL 搾乳
STR:0 = 搾乳
SELECTCOM = 509


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 20
LOSEBASE:1 += 100

SOURCE:3 = 100
SOURCE:4 = 40
SOURCE:13 = 100
SOURCE:15 = 50
SOURCE:18 = 100


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 100

;调教者が［幼稚］か［幼儿退行］
IF TALENT:PLAYER:150 || TALENT:PLAYER:151
	TIMES SOURCE:3 , 1.20
	TIMES SOURCE:4 , 1.20
ENDIF


;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;奴隶のＢ⇔调教者の指の汚れが移动
	STAIN:5 |= STAIN:PLAYER:1
	STAIN:PLAYER:1 |= STAIN:5

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(7)


;爱情经验
IF (TALENT:3 == 1 || TALENT:6 == 1) && ASSIPLAY == 0
	PRINTS EXPNAME:23
	PRINTL +1
	EXP:23 += 1
ENDIF

;依赖度ベクトル
TFLAG:33 = 1


RETURN 1

