ELSEIF ABL:2 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.00
ENDIF

;ABL:助手の技巧をみる
IF ABL:ASSI:2 == 0
	TIMES B , 1.00
ELSEIF ABL:ASSI:2 == 1
	TIMES B , 1.20
ELSEIF ABL:ASSI:2 == 2
	TIMES B , 1.40
ELSEIF ABL:ASSI:2 == 3
	TIMES B , 1.60
ELSEIF ABL:ASSI:2 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.00
