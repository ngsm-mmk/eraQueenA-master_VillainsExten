;-------------------------------------------------
;Ｗ素股
;侍奉、百合系派生指令
;-------------------------------------------------
@COM510
PRINTL 双人素股
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
A = 0
S = 0

;すべての命令に共通の要素を考慮
;(顺从が高いと命令に従いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:1
	SIF S
		PRINT  + 
	A += ABL:1 * 2
	PRINTS ABLNAME:1
	PRINTV 'LV,ABL:1,'(,ABL:1 * 2,')
	S = 1
ENDIF
;ABL:侍奉精神
IF ABL:7
	SIF S
		PRINT  + 
	A += ABL:7 * 4
	PRINTS ABLNAME:7
	PRINTV 'LV,ABL:7,'(,ABL:7 * 4,')
	S = 1
ENDIF
;ABL:精液成瘾
IF ABL:16
	SIF S
		PRINT  + 
	A += ABL:16 * 1
	PRINTS ABLNAME:16
	PRINTV 'LV,ABL:16,'(,ABL:16 * 1,')
	S = 1
ENDIF

IF MARK:1
	SIF S
		PRINT  + 
	A += MARK:1 * 2
	PRINTS MARKNAME:1
	PRINTV 'LV,MARK:1,'(,MARK:1 * 2,')
	S = 1
ENDIF


;PALAM:情欲
IF PALAM:6 < PALAMLV:1
	L = 0
ELSEIF PALAM:6 < PALAMLV:2
	L = 1
ELSEIF PALAM:6 < PALAMLV:3
	L = 2
ELSEIF PALAM:6 < PALAMLV:4
	L = 3
ELSEIF PALAM:6 < PALAMLV:5
	L = 4
ELSE
	L = 5
ENDIF
IF L
	SIF S
		PRINT  + 
	A += L * 3
	PRINTS PALAMNAME:6
	PRINTV 'LV,L,'(,L * 3,')
	S = 1
ENDIF

;害羞
IF TALENT:35
	PRINT  - 
	A -= 1
	PRINTS TALENTNAME:35
	PRINTV '(,1,')
	S = 1
ENDIF
;否定快感（淫乱、娼妇で无效）
IF TALENT:71 && (TALENT:4 == 0 && TALENT:7 == 0)
	PRINT  - 
	A -= 3
	PRINTS TALENTNAME:71
	PRINTV '(,3,')
	S = 1
ENDIF
;讨厌男人
IF TALENT:82
	PRINT  - 
	A -= 7
	PRINTS TALENTNAME:82
	PRINTV '(,7,')
	S = 1
ENDIF
;讨厌女人
IF TALENT:88
	PRINT  - 
	A -= 7
	PRINTS TALENTNAME:82
	PRINTV '(,7,')
	S = 1
ENDIF
;助手が讨厌男人
IF TALENT:ASSI:82
	PRINT  - 
	A -= 7
	PRINTFORM 助手是讨厌男人
	PRINTV '(,7,')
	S = 1
ENDIF
;助手が讨厌女人
IF TALENT:ASSI:88
	PRINT  - 
	A -= 7
	PRINTFORM 助手是讨厌女人
	PRINTV '(,7,')
	S = 1
ENDIF
;淫乱
IF TALENT:4
	SIF S
		PRINT  + 
	A += 3
	PRINTS TALENTNAME:4
	PRINTV '(,3,')
	S = 3
ENDIF
;娼妇
IF TALENT:7
	SIF S
		PRINT  + 
	A += 6
	PRINTS TALENTNAME:7
	PRINTV '(,6,')
	S = 6
ENDIF

;调教者が扶她
;IF TALENT:PLAYER:139
;	SIF S
;		PRINT  + 
;	A += 8
;	PRINTS TALENTNAME:139
;	PRINTV '(,8,')
;	S = 1
;ENDIF

;媚薬
IF TEQUIP:26
	SIF S
		PRINT  + 
	A += 6
	PRINTS ITEMNAME:41
	PRINTV '(,6,')
	S = 1
ENDIF

IF MARK:1
	SIF S
		PRINT  + 
	A += MARK:1 * 2
	PRINTS MARKNAME:1
	PRINTV 'LV,MARK:1,'(,MARK:1 * 2,')
	S = 1
ENDIF

;男で、同性倾向0
IF MALE(TARGET) && ABL:同性倾向 < 1
	PRINT  - 
	A -= 8
	PRINTFORM 无同性倾向
	PRINTV '(,8,')
	S = 1
ENDIF
;女で、百合属性0
IF !MALE(TARGET) && ABL:百合属性 < 1
	PRINT  - 
	A -= 8
	PRINTFORM 无百合属性
	PRINTV '(,8,')
	S = 1
ENDIF

;助手が男で、同性倾向0
IF MALE(ASSI) && ABL:ASSI:同性倾向 < 1
	PRINT  - 
	A -= 8
	PRINTFORM 助手无同性倾向
	PRINTV '(,8,')
	S = 1
ENDIF
;助手が女で、百合属性0
IF !MALE(ASSI) && ABL:ASSI:百合属性 < 1
	PRINT  - 
	A -= 8
	PRINTFORM 助手无百合属性
	PRINTV '(,8,')
	S = 1
ENDIF


Y = 0
;愛液の汚れ
SIF STAIN:PLAYER:2 & 1
	Y += 1
;精液の汚れ
SIF STAIN:PLAYER:2 & 4
	Y += 3
;肛の汚れ
SIF STAIN:PLAYER:2 & 8
	Y += 7
SIF STAIN:PLAYER:2 & 16
	Y += 15

SIF TALENT:61
	Y /= 3
SIF TALENT:62
	Y *= 2

;素股では汚れの影響が少なめ
Y /= 3

;汚れあり
IF Y
	PRINT  - 
	A -= Y
	;污臭钝感
	IF TALENT:61
		PRINT 有污物、
		PRINTS TALENTNAME:61
	ELSEIF TALENT:62
		PRINT 有污物、
		PRINTS TALENTNAME:62
	ELSE
		PRINT 有污物
	ENDIF
	PRINTV '(,Y,')
	S = 1
ENDIF

;合計を表示(25以上で実行)
PRINT  = 
PRINTV A

V = 25
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 实行值
PRINTV V
;実行不可口上/実行判定操作
IF A < V
	CALL KOJO_DENIAL
	WAIT
	RETURN 0
ELSE
	PRINTL
ENDIF


;-------------------------------------------------
;実行決定
;-------------------------------------------------
STR:0 = 双人素股
SELECTCOM = 510


;実行者が奴隶であるフラグ
TFLAG:28 = 1

;-------------------------------------------------
;射精槽チェック
;-------------------------------------------------
B = 1400

