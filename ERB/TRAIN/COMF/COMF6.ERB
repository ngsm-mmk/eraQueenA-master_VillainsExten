SOURCE:4 = 20
SOURCE:18 = 10
;奴隶男の場合
SIF TALENT:140
	SOURCE:17 = 3

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 10

;调教者が［幼稚］か［幼儿退行］
IF TALENT:PLAYER:150 || TALENT:PLAYER:151
	TIMES SOURCE:3 , 1.20
	TIMES SOURCE:4 , 1.20
ENDIF

