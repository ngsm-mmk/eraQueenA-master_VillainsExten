;-------------------------------------------------
;呼ばせ方变更
;日常系指令、レベル2
;-------------------------------------------------
@COM600
PRINTL 改变称呼方式
STR:0 = 改变称呼方式
Y = 0


;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;放弃と変化无
IF Y == 0
ELSEIF Y == 2
	IF KANRAKU(TARGET) == 1
		;消費体力、气力
		LOSEBASE:1 += 10
		SOURCE:16 = 500
	ELSE
		;消費体力、气力
		LOSEBASE:1 += 10
		SOURCE:12 = 100
		SOURCE:14 = 100
	ENDIF
ELSE
	;消費体力、气力
	LOSEBASE:1 += 10
	SOURCE:12 = 100
	SOURCE:14 = 100
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------

;依赖度ベクトル
SIF Y != 0
	TFLAG:33 = 4

RETURN 1

