;-------------------------------------------------
;胸爱抚
;爱抚系指令、レベル2
;-------------------------------------------------
@COM8
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
;前回と今回の调教者が同じ
IF !TEQUIP:60
	IF (ASSIPLAY && TFLAG:50) || (ASSIPLAY == 0 && TFLAG:50 == 0)
	;前回の调教が插入系のとき、插入中胸爱抚へ
	SIF (PREVCOM >= 60 && PREVCOM <= 77 && PREVCOM != 65) || PREVCOM == 503 || PREVCOM == 504 || PREVCOM == 506 || PREVCOM == 507 || PREVCOM == 515 || PREVCOM == 516 || PREVCOM == 517 || PREVCOM == 518 || PREVCOM == 591
		JUMP COM594
	ENDIF
ENDIF
PRINTL 爱抚胸部
STR:0 = 爱抚胸部

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 5
LOSEBASE:1 += 50

SOURCE:3 = 80
SOURCE:4 = 50
SOURCE:5 = 60
SOURCE:13 = 10
SOURCE:15 = 20
SOURCE:18 = 20


;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 20

;喜欢身体接触だと情爱のソース追加
IF TALENT:65
	SOURCE:4 += 50
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
IF TEQUIP:25
	;奴隶のＢに触手の汚れがつく
	STAIN:5 |= 64
ELSE
	;奴隶の胸の汚れがなければ口をつかう（愛液と母乳よごれはＯＫ、脏污无视か助手调教時は問題无）
	IF STAIN:5 < 2 || STAIN:5 == 16 || STAIN:5 == 17 || ASSIPLAY == 1 || TALENT:MASTER:64 == 1
		;调教者のTALENT:善用舌头をみる
		IF TALENT:PLAYER:52
			TIMES SOURCE:17 , 1.40
			SOURCE:16 += SOURCE:17/20
		ENDIF
		;奴隶のＢ⇔调教者の口の汚れが移动
		STAIN:5 |= STAIN:PLAYER:0
		STAIN:PLAYER:0 |= STAIN:5
	ENDIF
	;奴隶のＢ⇔调教者の指の汚れが移动
	STAIN:5 |= STAIN:PLAYER:1
	STAIN:PLAYER:1 |= STAIN:5
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(3)


;依赖度ベクトル
TFLAG:33 = 1


