@COM81
;-------------------------------------------------
;特殊派生処理
;-------------------------------------------------
;前回の调教が3Pのとき3Pへ
TFLAG:42 = 0
IF PREVCOM == 500
	CALL COM_ABLE500
	IF RESULT == 1
		TFLAG:42 = 1
		JUMP COM500
	ENDIF
;口交时自慰
ELSEIF  (PREVCOM == 10 || PREVCOM == 11 || PREVCOM == 14) && TEQUIP:19 == 0
		CALL COM_ABLE530
		SIF RESULT == 1
			JUMP COM530
;助手插入命令中+口交命令跳至3P
ELSEIF TEQUIP:47 || TEQUIP:48
	CALL COM_ABLE500
	JUMP COM500
