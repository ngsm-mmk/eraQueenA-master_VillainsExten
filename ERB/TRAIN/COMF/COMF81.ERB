;调教者が前回:助手で今回:主人か、前回:主人で今回:助手のとき
IF (ASSIPLAY && TFLAG:50 == 0) || (ASSIPLAY == 0 && TFLAG:50)
	;前回の调教が口交命令だと双枪口交に
	IF PREVCOM == 81
		CALL COM_ABLE511
		SIF RESULT == 1
			JUMP COM511
	ENDIF
ENDIF

