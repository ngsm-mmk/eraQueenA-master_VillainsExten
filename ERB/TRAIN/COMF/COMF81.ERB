ELSEIF (ASSIPLAY && TFLAG:50 == 0) || (ASSIPLAY == 0 && TFLAG:50)
	;前回の调教が正常位か后背位か后庭のときは3Pへ
	IF PREVCOM == 60 || PREVCOM == 61 || PREVCOM == 62 || PREVCOM == 63
		CALL COM_ABLE500
		SIF RESULT == 1
			JUMP COM500
	ENDIF
ENDIF

;前回の调教が双枪口交のとき双枪口交へ
;IF PREVCOM == 511
