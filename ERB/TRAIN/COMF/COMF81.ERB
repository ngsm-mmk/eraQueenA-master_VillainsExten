	;绳子使用中でなく、前回の调教が舔阴か口交か６９式だと６９式に
	IF (PREVCOM == 1 || PREVCOM == 2 || PREVCOM == 501) && TEQUIP:19 == 0
		CALL COM_ABLE501
		SIF RESULT == 1
			JUMP COM501
	ENDIF
ENDIF

