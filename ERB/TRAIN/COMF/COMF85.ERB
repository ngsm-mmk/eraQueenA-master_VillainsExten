@COM85
PRINTL 足交命令
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
A = 0
S = 0

;すべての命令に共通の要素を考慮
;(顺从が高いと命令に従いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:1
	SIF S
		PRINT  + 
	A += ABL:1 * 1
	PRINTS ABLNAME:1
	PRINTV 'LV,ABL:1,'(,ABL:1 * 1,')
	S = 1
ENDIF
;ABL:侍奉精神
IF ABL:7
	SIF S
		PRINT  + 
	A += ABL:7 * 4
	PRINTS ABLNAME:7
	PRINTV 'LV,ABL:7,'(,ABL:7 * 4,')
	S = 1
ENDIF
;ABL:精液成瘾
IF ABL:16
	SIF S
		PRINT  + 
	A += ABL:16 * 1
	PRINTS ABLNAME:16
	PRINTV 'LV,ABL:16,'(,ABL:16 * 1,')
	S = 1
ENDIF

IF MARK:1
	SIF S
		PRINT  + 
	A += MARK:1 * 1
	PRINTS MARKNAME:1
	PRINTV 'LV,MARK:1,'(,MARK:1 * 1,')
	S = 1
ENDIF


;PALAM:情欲
IF PALAM:6 < PALAMLV:1
	L = 0
ELSEIF PALAM:6 < PALAMLV:2
	L = 1
ELSEIF PALAM:6 < PALAMLV:3
	L = 2
ELSEIF PALAM:6 < PALAMLV:4
	L = 3
ELSEIF PALAM:6 < PALAMLV:5
	L = 4
ELSE
	L = 5
ENDIF
IF L
	SIF S
		PRINT  + 
	A += L * 1
	PRINTS PALAMNAME:6
	PRINTV 'LV,L,'(,L * 1,')
	S = 1
ENDIF

;'害羞
IF TALENT:35
	PRINT  - 
	A -= 3
	PRINTS TALENTNAME:35
	PRINTV '(,1,')
	S = 1
ENDIF
;污臭钝感
IF TALENT:61
	SIF S
		PRINT  + 
	A += 1
	PRINTS TALENTNAME:61
	PRINTV '(,1,')
	S = 1
ENDIF
;污臭敏感
IF TALENT:62
	PRINT  - 
	A -= 1
	PRINTS TALENTNAME:62
	PRINTV '(,1,')
	S = 1
ENDIF
;自我奉献
IF TALENT:63
	SIF S
		PRINT  + 
	A += 6
	PRINTS TALENTNAME:63
	PRINTV '(,6,')
	S = 1
ENDIF
;否定快感（淫乱、娼妇で无效）
IF TALENT:71 && (TALENT:4 == 0 && TALENT:7 == 0)
	PRINT  - 
	A -= 3
	PRINTS TALENTNAME:71
	PRINTV '(,1,')
	S = 1
ENDIF
;调教者が男で、同性倾向0（陷落で无效）
IF MALE(PLAYER) && ABL:同性倾向 < 1 && (!KANRAKU(TARGET) || (ASSIPLAY && KANRAKU(TARGET) != 2))
	PRINT  - 
	A -= 4
	PRINTFORM 无同性倾向
	PRINTV '(,4,')
	S = 1
ENDIF
;讨厌男人（陷落で无效）
IF MALE(PLAYER) && TALENT:讨厌男人 && (!KANRAKU(TARGET) || (ASSIPLAY && KANRAKU(TARGET) != 2))
	PRINT  - 
	A -= 5
	PRINTS TALENTNAME:82
	PRINTV '(,5,')
	S = 5
ENDIF
;恋慕
IF TALENT:3 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 5
	PRINTS TALENTNAME:3
	PRINTV '(,5,')
	S = 5
ENDIF
;相亲相爱
IF TALENT:6 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 10
	PRINTS TALENTNAME:6
	PRINTV '(,10,')
	S = 10
ENDIF

;性倒错
IF TALENT:80
	SIF S
		PRINT  + 
	A += 4
	PRINTS TALENTNAME:80
	PRINTV '(,4,')
	S = 4
ENDIF
;施虐狂
IF TALENT:83
	SIF S
		PRINT  + 
	A += 4
	PRINTS TALENTNAME:83
	PRINTV '(,4,')
	S = 4
ENDIF
;小恶魔
IF TALENT:87
	SIF S
		PRINT  + 
	A += 4
	PRINTS TALENTNAME:87
	PRINTV '(,4,')
	S = 4
ENDIF

;调教者が扶她
;IF TALENT:PLAYER:139
