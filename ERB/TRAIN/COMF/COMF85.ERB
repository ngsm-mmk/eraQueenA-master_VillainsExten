;	A += 8
;	PRINTS TALENTNAME:139
;	PRINTV '(,8,')
;	S = 1
;ENDIF

Y = 0
;愛液の汚れ
SIF STAIN:PLAYER:2 & 1
	Y += 1
;精液の汚れ
SIF STAIN:PLAYER:2 & 4
	Y += 3
;肛の汚れ
SIF STAIN:PLAYER:2 & 8
	Y += 7
SIF STAIN:PLAYER:2 & 16
	Y += 15

SIF TALENT:61
	Y /= 3
SIF TALENT:62
	Y *= 2

;足交では汚れがそれほど影響しない
Y /= 3

;汚れあり
IF Y
	PRINT  - 
	A -= Y
	;污臭钝感
	IF TALENT:61
		PRINT 有污物、
		PRINTS TALENTNAME:61
	ELSEIF TALENT:62
		PRINT 有污物、
		PRINTS TALENTNAME:62
	ELSE
		PRINT 有污物
	ENDIF
	PRINTV '(,Y,')
	S = 1
ENDIF


;合計を表示(22以上で実行)
PRINT  = 
PRINTV A

V = 22
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 实行值
PRINTV V
;実行不可口上/実行判定操作
IF A < V
	CALL KOJO_DENIAL
	WAIT
	RETURN 0
ELSE
	PRINTL
ENDIF

;-------------------------------------------------
;実行決定
;-------------------------------------------------
STR:0 = 足交命令


;実行者が奴隶であるフラグ
TFLAG:28 = 1

;-------------------------------------------------
;射精槽チェック
;-------------------------------------------------
B = 1500

;ABL技巧をみる
IF ABL:2 == 0
	TIMES B , 1.00
ELSEIF ABL:2 == 1
	TIMES B , 1.20
ELSEIF ABL:2 == 2
	TIMES B , 1.40
ELSEIF ABL:2 == 3
	TIMES B , 1.60
ELSEIF ABL:2 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.00
ENDIF

;ABL:顺从をみる
IF ABL:0 == 0
	TIMES B , 0.80
ELSEIF ABL:0 == 1
	TIMES B , 0.90
ELSEIF ABL:0 == 2
	TIMES B , 1.00
ELSEIF ABL:0 == 3
	TIMES B , 1.10
ELSEIF ABL:0 == 4
	TIMES B , 1.20
ELSE
	TIMES B , 1.30
ENDIF

;ABL:侍奉精神をみる
IF ABL:7 == 0
	TIMES B , 0.50
ELSEIF ABL:7 == 1
	TIMES B , 0.80
ELSEIF ABL:7 == 2
	TIMES B , 1.20
ELSEIF ABL:7 == 3
	TIMES B , 1.50
ELSEIF ABL:7 == 4
	TIMES B , 1.80
ELSE
	TIMES B , 2.40
ENDIF

;プ雷ヤーのABL:Ｃ感觉をみる
IF ABL:PLAYER:3 == 0
	TIMES B , 1.00
ELSEIF ABL:PLAYER:3 == 1
	TIMES B , 1.50
ELSEIF ABL:PLAYER:3 == 2
	TIMES B , 2.00
ELSEIF ABL:PLAYER:3 == 3
	TIMES B , 2.50
ELSEIF ABL:PLAYER:3 == 4
	TIMES B , 3.50
ELSE
	TIMES B , 5.00
ENDIF

;再装填処理中は射精槽は20分の1に
SIF CFLAG:PLAYER:9 > 0
	B /= 20


SIF TALENT:PLAYER:137 || TALENT:PLAYER:139 || TALENT:PLAYER:140
	BASE:PLAYER:2 += B

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、气力
LOSEBASE:0 += 10
LOSEBASE:1 += 150

SOURCE:5 = 700
SOURCE:6 = 500
SOURCE:14 = 800
SOURCE:17 = 400
SOURCE:18 = 400

;上のほうで計算した汚れデータ
SOURCE:15 = Y*10 + 50

;-------------------------------------------------
;特殊ソース処理
;-------------------------------------------------
;性压抑、抵抗持ちには、抑郁ソース追加
SIF TALENT:32 || TALENT:34
	SOURCE:16 += 600

;-------------------------------------------------
;射精チェック
;-------------------------------------------------
CALL SAMEN_CHECK

;射精時の処理
IF E >= 1
	;射精先タイプの设定
	TFLAG:703 = 5
	;射精先選択の可・不可
	TFLAG:704 = 1
	;汎用的な処理はこの関数で行う
	;（射精槽の再計算や射精经验の上昇と共通部分の表示）
	CALL SAMEN_SHOOT
ENDIF
;-------------------------------------------------
;汚れの処理
;-------------------------------------------------
;射精に関係なく行われる処理はここから
;靴を付けているとき
IF TEQUIP:9
	;奴隶の靴⇔调教者のＰの汚れが移动
	STAIN:17 |= STAIN:PLAYER:2
	STAIN:PLAYER:2 |= STAIN:17
;袜子を付けているとき
ELSEIF TEQUIP:1
	;奴隶の特殊２⇔调教者のＰの汚れが移动
	STAIN:9 |= STAIN:PLAYER:2
	STAIN:PLAYER:2 |= STAIN:9
ELSE
	;奴隶の足⇔调教者のＰの汚れが移动
	STAIN:7 |= STAIN:PLAYER:2
	STAIN:PLAYER:2 |= STAIN:7
ENDIF

;-------------------------------------------------
;经验の処理
;-------------------------------------------------
;蔷薇经验とか加算
CALL COM_EXP(4)


;依赖度ベクトル
TFLAG:33 = 1

;依赖度補正値(主人かつ恋慕、淫乱、服从で1。相亲相爱、娼妇、隶属で2）
IF (TALENT:3 || TALENT:4 || TALENT:5) && ASSIPLAY == 0
	TFLAG:30 += 1
ELSEIF (TALENT:6 || TALENT:7 || TALENT:8) && ASSIPLAY == 0
	TFLAG:30 += 2
ENDIF

A = 0
;施虐狂持ちは嗜虐快乐经验も入れる（地の文から判断）
IF TALENT:83
	E = 1
	L = 0
	;靴履いてるならさらに入れる
	SIF TEQUIP:9
		E += 1
	;それが细高跟ならさらに入れる
	SIF TEQUIP:9 == 9
		E += 1
	;嗜虐属性に応じて嗜虐快乐经验
	IF ABL:10 <= 4
		E += 0
		L += 0
	ELSEIF ABL:10 >= 5
		E += 2
		L += 1
	ENDIF
	;调教者の受虐属性で嗜虐快乐经验
	IF ABL:PLAYER:9 <= 3
		E += 0
		L += 0
	ELSEIF ABL:PLAYER:9 >= 4
		E += 1
		L += 2
	ENDIF
	PRINT 嗜虐快乐经验+
	PRINTVL E
	EXP:32 += E
	TFLAG:28 = E
	IF L > 0
		PRINTFORM %CALLNAME:PLAYER%的
		PRINT 痛苦快乐经验+
		PRINTVL L
		EXP:PLAYER:30 += L
		TFLAG:27 = L
	ENDIF
ENDIF


TFLAG:100 = 1

